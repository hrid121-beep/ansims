@model IMS.Application.DTOs.ReturnDto
@{
    ViewData["Title"] = "Create Return";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var linkedIssue = ViewBag.LinkedIssue as IMS.Application.DTOs.IssueDto;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-undo-alt text-primary"></i> Create Return
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Returns</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-action="Create" method="post" id="returnForm">
            @Html.AntiForgeryToken()

            @if (linkedIssue != null)
            {
                <input type="hidden" name="linkedIssueId" value="@linkedIssue.Id" />
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h5><i class="icon fas fa-info-circle"></i> Linked to Issue</h5>
                    Creating return for Issue: <strong>@linkedIssue.IssueNo</strong> issued to <strong>@linkedIssue.IssuedToName</strong>
                </div>
            }

            <div class="row">
                <!-- Main Form -->
                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-edit"></i> Return Information
                            </h3>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Return No and Date -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Return No <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                            </div>
                                            <input asp-for="ReturnNo" class="form-control" value="@ViewBag.ReturnNo" readonly style="background-color: #e9ecef;" />
                                        </div>
                                        <small class="text-muted">Auto-generated return number</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReturnDate" class="control-label">Return Date <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                            </div>
                                            <input asp-for="ReturnDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                        </div>
                                        <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <!-- Returned From Information -->
                            <h5 class="mb-3"><i class="fas fa-user-tag text-info"></i> Returned From</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReturnedByType" class="control-label">Entity Type <span class="text-danger">*</span></label>
                                        <select asp-for="ReturnedByType" class="form-control select2" asp-items="ViewBag.ReturnedByTypes" required>
                                            <option value="">-- Select Type --</option>
                                        </select>
                                        <span asp-validation-for="ReturnedByType" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReturnedBy" class="control-label">Name / Identification <span class="text-danger">*</span></label>
                                        <input asp-for="ReturnedBy" class="form-control" placeholder="Enter name or ID number" required />
                                        <span asp-validation-for="ReturnedBy" class="text-danger"></span>
                                        <small class="text-muted">Person or unit returning the item(s)</small>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <!-- Item Selection -->
                            <h5 class="mb-3"><i class="fas fa-box text-info"></i> Item Details</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ItemId" class="control-label">Select Item <span class="text-danger">*</span></label>
                                        @if (linkedIssue != null && linkedIssue.Items != null && linkedIssue.Items.Any())
                                        {
                                            <select asp-for="ItemId" class="form-control select2" required>
                                                <option value="">-- Select Item from Issue --</option>
                                                @foreach (var issueItem in linkedIssue.Items)
                                                {
                                                    <option value="@issueItem.ItemId" data-max-qty="@issueItem.Quantity">
                                                        @issueItem.ItemName (Issued Qty: @issueItem.Quantity)
                                                    </option>
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <select asp-for="ItemId" class="form-control select2" asp-items="ViewBag.Items" required>
                                                <option value="">-- Select Item --</option>
                                            </select>
                                        }
                                        <span asp-validation-for="ItemId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Quantity" class="control-label">Return Quantity <span class="text-danger">*</span></label>
                                        <input asp-for="Quantity" type="number" class="form-control" min="0.01" step="0.01" placeholder="0.00" required />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                        <small class="text-info" id="maxQtyHint"></small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StoreId" class="control-label">Return to Store <span class="text-danger">*</span></label>
                                        <select asp-for="StoreId" class="form-control select2" asp-items="ViewBag.Stores" required>
                                            <option value="">-- Select Store --</option>
                                        </select>
                                        <span asp-validation-for="StoreId" class="text-danger"></span>
                                        <small class="text-muted">Store where item will be returned</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Condition" class="control-label">
                                            Item Condition <span class="text-danger">*</span>
                                            <span id="serviceableStatusBadge" class="badge badge-secondary ml-2" style="display:none;"></span>
                                        </label>
                                        <select asp-for="Condition" class="form-control" asp-items="ViewBag.Conditions" required>
                                            <option value="">-- Select Condition --</option>
                                        </select>
                                        <span asp-validation-for="Condition" class="text-danger"></span>
                                        <small class="form-text text-muted">
                                            <i class="fas fa-info-circle"></i>
                                            <strong>Good</strong> = Serviceable | <strong>Others</strong> = Unserviceable
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <!-- Return Type and Reason -->
                            <h5 class="mb-3"><i class="fas fa-clipboard-list text-info"></i> Return Classification</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReturnType" class="control-label">Return Type <span class="text-danger">*</span></label>
                                        <select asp-for="ReturnType" class="form-control" asp-items="ViewBag.ReturnTypes" required>
                                            <option value="">-- Select Type --</option>
                                        </select>
                                        <span asp-validation-for="ReturnType" class="text-danger"></span>
                                        <small class="text-muted" id="returnTypeHint"></small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Reason" class="control-label">Return Reason <span class="text-danger">*</span></label>
                                        <select asp-for="Reason" class="form-control" asp-items="ViewBag.ReturnReasons" required>
                                            <option value="">-- Select Reason --</option>
                                        </select>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Auto Restock Option -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="custom-control custom-switch custom-switch-lg">
                                            <input asp-for="IsRestocked" type="checkbox" class="custom-control-input" id="isRestocked" />
                                            <label class="custom-control-label" for="isRestocked">
                                                <strong>Auto Restock</strong> - Automatically add returned items back to store inventory
                                            </label>
                                        </div>
                                        <small class="text-muted ml-4">
                                            <i class="fas fa-info-circle"></i> Recommended for items in good condition. Damaged/expired items require approval.
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Remarks -->
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label">Additional Remarks</label>
                                <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter any additional notes or observations about the return..."></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Create Return
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="reset" class="btn btn-outline-secondary btn-lg float-right">
                                <i class="fas fa-redo"></i> Reset Form
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-md-4">
                    <!-- Linked Issue Details -->
                    @if (linkedIssue != null)
                    {
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-file-invoice"></i> Original Issue Details
                                </h3>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Issue No:</dt>
                                    <dd class="col-sm-7"><strong class="text-primary">@linkedIssue.IssueNo</strong></dd>

                                    <dt class="col-sm-5">Issue Date:</dt>
                                    <dd class="col-sm-7">@linkedIssue.IssueDate.ToString("dd-MMM-yyyy")</dd>

                                    <dt class="col-sm-5">Issued To:</dt>
                                    <dd class="col-sm-7">@linkedIssue.IssuedToName</dd>

                                    @if (!string.IsNullOrEmpty(linkedIssue.Purpose))
                                    {
                                        <dt class="col-sm-5">Purpose:</dt>
                                        <dd class="col-sm-7">@linkedIssue.Purpose</dd>
                                    }

                                    @if (linkedIssue.Items != null && linkedIssue.Items.Any())
                                    {
                                        <dt class="col-sm-12 mt-2"><strong>Issued Items:</strong></dt>
                                        <dd class="col-sm-12">
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var item in linkedIssue.Items)
                                                {
                                                    <li><i class="fas fa-box text-muted"></i> @item.ItemName: <strong>@item.Quantity</strong></li>
                                                }
                                            </ul>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    }

                    <!-- Return Guidelines -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-book-open"></i> Return Guidelines
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="callout callout-warning">
                                <h6><i class="fas fa-exclamation-triangle"></i> Important Checks</h6>
                                <ul class="mb-0">
                                    <li>Verify item condition thoroughly</li>
                                    <li>Document any damages or defects</li>
                                    <li>Select appropriate return type and reason</li>
                                    <li>Provide detailed remarks if necessary</li>
                                </ul>
                            </div>

                            <h6 class="mt-3"><i class="fas fa-info-circle text-info"></i> Return Types</h6>
                            <ul class="list-unstyled">
                                <li><strong>Normal:</strong> Item no longer needed</li>
                                <li><strong>Damaged:</strong> Item broken/unusable (requires approval)</li>
                                <li><strong>Expired:</strong> Item past expiry date (requires approval)</li>
                            </ul>

                            <h6 class="mt-3"><i class="fas fa-check-circle text-success"></i> Auto Restock</h6>
                            <p class="text-sm mb-0">
                                Items in <strong>Good Condition</strong> can be automatically added back to store inventory.
                                Damaged or expired items require separate approval workflow.
                            </p>
                        </div>
                    </div>

                    <!-- Help Card -->
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-question-circle"></i> Need Help?
                            </h3>
                        </div>
                        <div class="card-body">
                            <p class="text-sm">
                                <i class="fas fa-phone"></i> <strong>Support:</strong> Contact your store administrator<br>
                                <i class="fas fa-envelope"></i> <strong>Email:</strong> support@ansar-vdp.gov.bd
                            </p>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-block">
                                <i class="fas fa-list"></i> View All Returns
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4',
                width: '100%'
            });

            // Handle item selection for quantity validation
            $('#ItemId').on('change', function() {
                var selectedOption = $(this).find('option:selected');
                var maxQty = selectedOption.data('max-qty');

                if (maxQty) {
                    $('#Quantity').attr('max', maxQty);
                    $('#maxQtyHint').html('<i class="fas fa-info-circle"></i> Maximum returnable: <strong>' + maxQty + '</strong>').show();
                } else {
                    $('#Quantity').removeAttr('max');
                    $('#maxQtyHint').hide();
                }
            });

            // Auto-suggest restock based on condition and show serviceable status
            $('#Condition').on('change', function() {
                var condition = $(this).val();
                var isRestockedCheckbox = $('#isRestocked');

                // Update serviceable status badge
                var badge = $('#serviceableStatusBadge');
                if (condition) {
                    if (condition === 'Good') {
                        badge.removeClass('badge-danger').addClass('badge-success')
                             .html('<i class="fas fa-check-circle"></i> Serviceable')
                             .show();
                        isRestockedCheckbox.prop('checked', true);
                        showToast('success', 'Items in good condition can be auto-restocked');
                    } else {
                        badge.removeClass('badge-success').addClass('badge-danger')
                             .html('<i class="fas fa-times-circle"></i> Unserviceable')
                             .show();
                        isRestockedCheckbox.prop('checked', false);
                        if (condition === 'Damaged' || condition === 'Unusable') {
                            showToast('warning', 'Damaged/unusable items require approval before restocking');
                        } else {
                            isRestockedCheckbox.prop('checked', false);
                        }
                    }
                } else {
                    badge.hide();
                }
            });

            // Return Type information
            $('#ReturnType').on('change', function() {
                var returnType = $(this).val();
                var hintElement = $('#returnTypeHint');

                if (returnType === 'Normal') {
                    hintElement.html('<i class="fas fa-check text-success"></i> Standard return process').removeClass('text-warning').addClass('text-success');
                } else if (returnType === 'Damaged') {
                    hintElement.html('<i class="fas fa-exclamation-triangle text-warning"></i> Requires approval workflow').removeClass('text-success').addClass('text-warning');
                } else if (returnType === 'Expired') {
                    hintElement.html('<i class="fas fa-exclamation-triangle text-danger"></i> Requires approval workflow').removeClass('text-success').addClass('text-warning');
                } else {
                    hintElement.html('');
                }
            });

            // Form validation before submit
            $('#returnForm').on('submit', function(e) {
                var quantity = parseFloat($('#Quantity').val());
                var maxQty = parseFloat($('#Quantity').attr('max'));

                if (maxQty && quantity > maxQty) {
                    e.preventDefault();
                    showToast('error', 'Return quantity cannot exceed issued quantity of ' + maxQty);
                    return false;
                }

                // Check if condition matches return type
                var condition = $('#Condition').val();
                var returnType = $('#ReturnType').val();

                if (condition === 'Damaged' && returnType !== 'Damaged') {
                    if (!confirm('Item condition is Damaged but return type is not. Continue?')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });

            // Toast notification helper
            function showToast(type, message) {
                var icon = type === 'success' ? 'check' : type === 'error' ? 'ban' : 'info';
                var bgClass = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-warning';

                $(document).Toasts('create', {
                    class: bgClass,
                    title: type.charAt(0).toUpperCase() + type.slice(1),
                    body: message,
                    icon: 'fas fa-' + icon,
                    autohide: true,
                    delay: 3000
                });
            }

            // Auto-uppercase text inputs
            $('#ReturnedBy').on('input', function() {
                this.value = this.value.toUpperCase();
            });

            // Trigger initial check if condition is pre-selected
            if ($('#Condition').val()) {
                $('#Condition').trigger('change');
            }
        });
    </script>
}
