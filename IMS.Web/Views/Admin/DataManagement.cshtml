@{
    ViewData["Title"] = "Factory Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Factory Reset - System Initialization</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="SettingsDashboard">Settings</a></li>
                    <li class="breadcrumb-item active">Factory Reset</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row justify-content-center">
            <!-- Initialize Default Settings Card -->
            <div class="col-lg-8 mb-4">
                <div class="card card-primary card-outline h-100">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-cog"></i> Initialize Default Settings
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h5 class="text-primary">Factory Reset - Setup Default Configurations</h5>
                            <p class="text-muted">
                                This will initialize all default approval thresholds and workflows for the system.
                            </p>
                        </div>

                        <div class="alert alert-info">
                            <h6 class="alert-heading"><i class="fas fa-info-circle"></i> What will be created:</h6>
                            <ul class="mb-0">
                                <li><strong>Approval Thresholds</strong> - For all entity types (Purchase, Requisition, Issue, Transfer, etc.)</li>
                                <li><strong>Approval Workflows</strong> - Default approval processes</li>
                                <li><strong>Role-based Approvers</strong> - Automatic approver assignment based on amount</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Note:</strong> This will NOT overwrite existing settings. Only missing configurations will be added.
                        </div>

                        <h6 class="mt-3">Default Approval Levels:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Entity</th>
                                        <th>Amount Range</th>
                                        <th>Approver</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td rowspan="3">Purchase</td>
                                        <td>৳0 - ৳50,000</td>
                                        <td>Store Manager</td>
                                    </tr>
                                    <tr>
                                        <td>৳50,001 - ৳200,000</td>
                                        <td>DDG Admin</td>
                                    </tr>
                                    <tr>
                                        <td>৳200,001+</td>
                                        <td>Director</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-center text-muted"><em>Similar thresholds for Requisition, Issue, Transfer, Stock Entry, etc.</em></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <form asp-action="InitializeDefaultSettings" method="post" id="initializeForm" class="mt-4">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn btn-primary btn-lg btn-block" onclick="confirmInitialize()">
                                <i class="fas fa-sync-alt"></i> Initialize Default Settings
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Section -->
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-question-circle"></i> How to Use
                        </h3>
                    </div>
                    <div class="card-body">
                        <h6 class="text-primary"><i class="fas fa-cog"></i> Initialize Default Settings (Factory Reset)</h6>
                        <ol>
                            <li>Click "Initialize Default Settings" button</li>
                            <li>Confirm the action in the popup dialog</li>
                            <li>System will create all default approval configurations</li>
                            <li>View results in the success/error message</li>
                            <li>Go to <a asp-controller="ApprovalSettings" asp-action="Index">Approval Settings</a> to review</li>
                        </ol>
                        <div class="alert alert-success mt-3">
                            <strong>Safe Operation:</strong> Existing settings will not be modified. Only missing configurations will be added.
                        </div>
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>Database Backup:</strong> For database backup operations, please visit <a asp-controller="Settings" asp-action="Backup" class="alert-link">Database Backup Page</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function confirmInitialize() {
            Swal.fire({
                title: 'Initialize Default Settings?',
                html: `
                    <p>This will create default approval thresholds and workflows for all entity types.</p>
                    <p class="text-warning"><strong>Existing settings will not be modified.</strong></p>
                    <p>Do you want to proceed?</p>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#007bff',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-check"></i> Yes, Initialize',
                cancelButtonText: '<i class="fas fa-times"></i> Cancel',
                showLoaderOnConfirm: true,
                preConfirm: () => {
                    document.getElementById('initializeForm').submit();
                },
                allowOutsideClick: () => !Swal.isLoading()
            });
        }
    </script>
}
