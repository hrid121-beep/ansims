        </div>

        <!-- Additional Cards -->
        <div class="row">
            <!-- Recent Failed Logins -->
            <div class="col-md-6">
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle"></i> Recent Failed Login Attempts
                        </h3>
                    </div>
                    <div class="card-body p-0">
