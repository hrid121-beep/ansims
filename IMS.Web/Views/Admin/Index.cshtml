@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Administration</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Administration</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

<!-- New Settings Dashboard Link -->
<div class="row mb-4">
    <div class="col-12">
        <a asp-action="SettingsDashboard" class="text-decoration-none">
            <div class="alert alert-info" style="background: linear-gradient(135deg, #006a4e 0%, #008060 100%); border: none; cursor: pointer;">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-white">
                        <h5 class="mb-1">
                            <i class="fas fa-star mr-2"></i>Try the New Settings Dashboard
                        </h5>
                        <p class="mb-0">
                            Access all administration and system settings in one unified interface
                        </p>
                    </div>
                    <div class="text-white">
                        <i class="fas fa-arrow-circle-right fa-2x"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5 class="card-title">User Management</h5>
                <p class="card-text">Manage system users and their roles</p>
                <a asp-action="Users" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-2"></i>Manage Users
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-user-shield fa-3x text-success mb-3"></i>
                <h5 class="card-title">Role Management</h5>
                <p class="card-text">Configure user roles and permissions</p>
                <a asp-action="Roles" class="btn btn-success">
                    <i class="fas fa-arrow-right me-2"></i>Manage Roles
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-cog fa-3x text-info mb-3"></i>
                <h5 class="card-title">System Settings</h5>
                <p class="card-text">Configure system-wide settings</p>
                <a asp-controller="Settings" asp-action="Index" class="btn btn-info">
                    <i class="fas fa-arrow-right me-2"></i>Manage Settings
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-history fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Activity Logs</h5>
                <p class="card-text">View system activity and audit logs</p>
                <a asp-action="Logs" class="btn btn-warning">
                    <i class="fas fa-arrow-right me-2"></i>View Logs
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-database fa-3x text-danger mb-3"></i>
                <h5 class="card-title">Backup & Restore</h5>
                <p class="card-text">Manage database backups</p>
                <a asp-controller="Settings" asp-action="Backup" class="btn btn-danger">
                    <i class="fas fa-arrow-right me-2"></i>Manage Backup
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-info-circle fa-3x text-secondary mb-3"></i>
                <h5 class="card-title">System Information</h5>
                <p class="card-text">View system version and details</p>
                <a asp-controller="Settings" asp-action="SystemInfo" class="btn btn-secondary">
                    <i class="fas fa-arrow-right me-2"></i>View Info
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-sync-alt fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Data Management</h5>
                <p class="card-text">Bulk update items with Bangla names and stock values</p>
                <a asp-action="DataManagement" class="btn btn-primary">
                    <i class="fas fa-arrow-right me-2"></i>Manage Data
                </a>
            </div>
        </div>
    </div>
</div>
    </div>
</section>