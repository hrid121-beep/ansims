@using IMS.Application.DTOs
@model StockEntryDto
@{
    ViewData["Title"] = "Edit Stock Entry";
}

@section Styles {
    <style>
        .content-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
        }

        label {
            font-weight: 600;
            font-size: 0.95rem;
            color: #333;
        }

        .required-field {
            color: #dc3545;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .table thead th {
            background-color: #007bff;
            color: white;
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            padding: 12px 8px;
        }

        .table tbody td {
            font-weight: 500;
            font-size: 0.9rem;
            padding: 10px 8px;
            vertical-align: middle;
        }

        .badge {
            font-weight: 700;
            font-size: 0.85rem;
            padding: 0.4rem 0.7rem;
        }

        .btn {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .alert {
            font-weight: 600;
        }

        #validationSummary {
            border: 2px solid #dc3545;
            font-weight: 600;
        }
    </style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-edit text-warning"></i> Edit Stock Entry
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Stock Entries</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        <!-- Validation Summary -->
        <div id="validationSummary" style="display:none;">
            <div class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Please fix the following errors:</h5>
                <div id="validationErrors"></div>
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <form asp-action="Edit" asp-route-id="@Model.Id" method="post" id="editStockEntryForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EntryNo" />
            <input type="hidden" asp-for="Status" />

            <!-- Stock Entry Details Card -->
            <div class="card card-warning card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-info-circle"></i> Stock Entry Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Note:</strong> You are editing stock entry <strong>@Model.EntryNo</strong>.
                        Only Draft entries can be edited.
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label style="font-weight: 700;">Entry No</label>
                                <input type="text" class="form-control" value="@Model.EntryNo" readonly style="background-color: #e9ecef; font-weight: 600;" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EntryDate">
                                    Entry Date <span class="required-field">*</span>
                                </label>
                                <input asp-for="EntryDate" type="date" class="form-control" required style="font-weight: 600;" />
                                <span asp-validation-for="EntryDate" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="StoreId">
                                    Store <span class="required-field">*</span>
                                </label>
                                <select asp-for="StoreId" class="form-control select2" required>
                                    <option value="">-- Select Store --</option>
                                    @if (ViewBag.Stores != null)
                                    {
                                        @foreach (var store in ViewBag.Stores as IEnumerable<dynamic>)
                                        {
                                            <option value="@store.Id" selected="@(store.Id == Model.StoreId)">@store.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="StoreId" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EntryType">Entry Type</label>
                                <select asp-for="EntryType" class="form-control" style="font-weight: 600;">
                                    <option value="Direct">Direct Entry</option>
                                    <option value="Initial">Initial Stock</option>
                                    <option value="Found">Found Stock</option>
                                    <option value="Return">Return Stock</option>
                                    <option value="Transfer">Transfer In</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Remarks">
                                    Remarks <small class="text-muted font-weight-bold">(Optional)</small>
                                </label>
                                <textarea asp-for="Remarks" class="form-control" rows="2"
                                          placeholder="Add any notes or comments..." style="font-weight: 500;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Items Table Card -->
            <div class="card card-success card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-boxes"></i> Stock Items
                    </h3>
                    <div class="card-tools">
                        <span class="badge badge-primary" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">
                            @Model.Items?.Count() Items
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="50">#</th>
                                    <th>Item Code</th>
                                    <th>Item Name</th>
                                    <th>Category</th>
                                    <th>Quantity <span class="required-field">*</span></th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                    <th>Location</th>
                                    <th>Batch No</th>
                                    <th>Expiry Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    int index = 0;
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="text-center" style="font-weight: 700;">@(index + 1)</td>
                                            <td><strong>@item.ItemCode</strong></td>
                                            <td>@item.ItemName</td>
                                            <td>@item.CategoryName</td>
                                            <td>
                                                <input type="hidden" name="Items[@index].ItemId" value="@item.ItemId" />
                                                <input type="hidden" name="Items[@index].ItemCode" value="@item.ItemCode" />
                                                <input type="hidden" name="Items[@index].ItemName" value="@item.ItemName" />
                                                <input type="number" name="Items[@index].Quantity"
                                                       class="form-control form-control-sm quantity-input"
                                                       value="@item.Quantity" min="0.01" step="0.01" required
                                                       style="font-weight: 600;" />
                                            </td>
                                            <td>
                                                <input type="number" name="Items[@index].UnitCost"
                                                       class="form-control form-control-sm price-input"
                                                       value="@item.UnitCost" min="0" step="0.01"
                                                       style="font-weight: 600;" />
                                            </td>
                                            <td class="text-right">
                                                <strong class="item-total" style="font-size: 1rem;">@((item.Quantity * item.UnitCost).ToString("N2"))</strong>
                                            </td>
                                            <td>
                                                <input type="text" name="Items[@index].Location"
                                                       class="form-control form-control-sm"
                                                       value="@item.Location" placeholder="A1-B2" />
                                            </td>
                                            <td>
                                                <input type="text" name="Items[@index].BatchNumber"
                                                       class="form-control form-control-sm"
                                                       value="@item.BatchNumber" placeholder="Auto" />
                                            </td>
                                            <td>
                                                <input type="date" name="Items[@index].ExpiryDate"
                                                       class="form-control form-control-sm"
                                                       value="@item.ExpiryDate?.ToString("yyyy-MM-dd")" />
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <th colspan="4" class="text-right" style="background-color: #343a40; color: white;">Grand Total:</th>
                                    <th id="totalQuantity" class="text-center" style="background-color: #343a40; color: white; font-size: 1rem;">
                                        @Model.TotalQuantity.ToString("N2")
                                    </th>
                                    <th style="background-color: #343a40;"></th>
                                    <th id="totalValue" class="text-right" style="background-color: #343a40; color: white; font-size: 1rem;">
                                        @Model.TotalValue.ToString("N2")
                                    </th>
                                    <th colspan="3" style="background-color: #343a40;"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-warning btn-lg" id="updateBtn">
                                <i class="fas fa-save"></i> Update Stock Entry
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-default btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap4'
            });

            // Calculate totals on quantity/price change
            $(document).on('input', '.quantity-input, .price-input', function() {
                calculateTotals();
            });

            function calculateTotals() {
                let totalQuantity = 0;
                let totalValue = 0;

                $('tbody tr').each(function() {
                    const quantity = parseFloat($(this).find('.quantity-input').val()) || 0;
                    const price = parseFloat($(this).find('.price-input').val()) || 0;
                    const rowTotal = quantity * price;

                    $(this).find('.item-total').text(rowTotal.toFixed(2));

                    totalQuantity += quantity;
                    totalValue += rowTotal;
                });

                $('#totalQuantity').text(totalQuantity.toFixed(2));
                $('#totalValue').text(totalValue.toFixed(2));
            }

            // Form validation
            $('#editStockEntryForm').submit(function(e) {
                const errors = [];

                if (!$('select[name="StoreId"]').val()) {
                    errors.push('Please select a store');
                }

                $('tbody tr').each(function(index) {
                    const quantity = $(this).find('.quantity-input').val();
                    if (!quantity || parseFloat(quantity) <= 0) {
                        errors.push(`Row ${index + 1}: Please enter a valid quantity`);
                    }
                });

                if (errors.length > 0) {
                    e.preventDefault();
                    showValidationErrors(errors);
                    return false;
                }

                $('#updateBtn').prop('disabled', true)
                              .html('<i class="fas fa-spinner fa-spin"></i> Updating...');

                return true;
            });

            function showValidationErrors(errors) {
                let errorHtml = '<ul class="mb-0" style="font-weight: 600;">';
                errors.forEach(error => {
                    errorHtml += `<li>${error}</li>`;
                });
                errorHtml += '</ul>';

                $('#validationErrors').html(errorHtml);
                $('#validationSummary').show();

                $('html, body').animate({ scrollTop: 0 }, 'fast');
            }

            // Initial calculation
            calculateTotals();
        });
    </script>
}