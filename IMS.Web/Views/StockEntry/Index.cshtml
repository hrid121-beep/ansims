@using IMS.Application.DTOs
@using IMS.Application.Helpers
@model PagedResult<StockEntryDto>
@{
    ViewData["Title"] = "Stock Entries";
}

@section Styles {
    <style>
        /* IMPROVED FONT VISIBILITY */
        .content-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #333;
        }

        /* TABLE IMPROVEMENTS */
        .table thead th {
            background-color: #007bff;
            color: white;
            font-weight: 700;
            font-size: 0.95rem;
            text-transform: uppercase;
            padding: 12px 8px;
            white-space: nowrap;
        }

        .table tbody td {
            font-weight: 500;
            font-size: 0.9rem;
            padding: 10px 8px;
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* BADGE VISIBILITY */
        .badge {
            font-weight: 700;
            font-size: 0.85rem;
            padding: 0.4rem 0.7rem;
        }

        /* BUTTON VISIBILITY */
        .btn {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .btn-group-sm .btn {
            padding: 0.375rem 0.5rem;
            font-size: 0.875rem;
        }

        /* FILTER FORM */
        .form-inline .form-control,
        .form-inline .btn {
            font-weight: 600;
            font-size: 0.95rem;
        }

        /* PAGINATION */
        .pagination .page-link {
            font-weight: 600;
            font-size: 0.95rem;
        }

        /* SERIAL NUMBER COLUMN */
        .serial-number {
            font-weight: 700;
            font-size: 1rem;
            color: #333;
        }

        /* ENTRY NUMBER LINK */
        .entry-number-link {
            font-weight: 700;
            font-size: 0.95rem;
            color: #007bff;
            text-decoration: none;
        }

            .entry-number-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        /* ACTION BUTTONS */
        .btn-action {
            margin: 0 2px;
        }

            .btn-action i {
                font-size: 0.875rem;
            }
    </style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-clipboard-list text-primary"></i> Stock Entries
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Stock Entries</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @Html.AntiForgeryToken()

        <div class="card card-primary card-outline">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <form method="get" class="form-inline">
                            <div class="form-group mr-2">
                                <label class="mr-2" style="font-weight: 600;">Store:</label>
                                <select name="storeId" class="form-control" onchange="this.form.submit()">
                                    <option value="">All Stores</option>
                                    @if (ViewBag.Stores != null)
                                    {
                                        @foreach (var store in ViewBag.Stores as IEnumerable<dynamic>)
                                        {
                                            bool isSelected = store.Id == ViewBag.CurrentStoreId;
                                            <option value="@store.Id" selected="@isSelected">
                                                @store.Name
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="mr-2" style="font-weight: 600;">Status:</label>
                                <select name="status" class="form-control" onchange="this.form.submit()">
                                    <option value="">All Status</option>
                                    @{
                                        bool isDraft = ViewBag.CurrentStatus == "Draft";
                                        bool isCompleted = ViewBag.CurrentStatus == "Completed";
                                        bool isCancelled = ViewBag.CurrentStatus == "Cancelled";
                                    }
                                    <option value="Draft" selected="@isDraft">Draft</option>
                                    <option value="Completed" selected="@isCompleted">Completed</option>
                                    <option value="Cancelled" selected="@isCancelled">Cancelled</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 text-right">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> New Stock Entry
                        </a>
                        <a asp-action="BulkUpload" class="btn btn-info">
                            <i class="fas fa-upload"></i> Bulk Upload
                        </a>
                        <a asp-action="StockLevels" class="btn btn-success">
                            <i class="fas fa-chart-bar"></i> Stock Levels
                        </a>
                        <a asp-action="ExportStock" class="btn btn-secondary">
                            <i class="fas fa-download"></i> Export
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model?.Items == null || !Model.Items.Any())
                {
                    <div class="alert alert-info m-3" style="font-weight: 600; font-size: 1rem;">
                        <i class="fas fa-info-circle"></i> No stock entries found.
                        <a asp-action="Create" class="alert-link" style="font-weight: 700;">Create your first stock entry</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th width="50">#</th>
                                    <th>Entry No</th>
                                    <th>Date</th>
                                    <th>Store</th>
                                    <th>Type</th>
                                    <th width="80">Items</th>
                                    <th>Total Qty</th>
                                    <th>Total Value</th>
                                    <th>Status</th>
                                    <th>Created By</th>
                                    <th width="200">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int serialNumber = (Model.PageNumber - 1) * Model.PageSize + 1;
                                }
                                @foreach (var entry in Model.Items)
                                {
                                    <tr>
                                        <td class="text-center serial-number">@serialNumber</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@entry.Id" class="entry-number-link">
                                                @entry.EntryNo
                                            </a>
                                        </td>
                                        <td>@entry.EntryDate.ToString("dd-MMM-yyyy")</td>
                                        <td>@entry.StoreName</td>
                                        <td>
                                            <span class="badge badge-info">@entry.EntryType</span>
                                        </td>
                                        <td class="text-center"><strong>@entry.TotalItems</strong></td>
                                        <td class="text-right"><strong>@entry.TotalQuantity.ToString("N2")</strong></td>
                                        <td class="text-right"><strong>৳ @entry.TotalValue.ToString("N2")</strong></td>
                                        <td>
                                            @switch (entry.Status)
                                            {
                                                case "Completed":
                                                    <span class="badge badge-success">Completed</span>
                                                    break;
                                                case "Draft":
                                                    <span class="badge badge-warning">Draft</span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge badge-danger">Cancelled</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-secondary">@entry.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@entry.CreatedBy</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <!-- VIEW BUTTON - Always visible -->
                                                <a asp-action="Details" asp-route-id="@entry.Id"
                                                   class="btn btn-info btn-action" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                                @if (entry.Status == "Draft")
                                                {
                                                    <!-- EDIT BUTTON - Only for Draft -->
                                                    <a asp-action="Edit" asp-route-id="@entry.Id"
                                                       class="btn btn-warning btn-action" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>

                                                    <!-- COMPLETE BUTTON - Only for Draft -->
                                                    <button type="button" class="btn btn-success btn-action complete-btn"
                                                            data-id="@entry.Id" title="Complete Entry">
                                                        <i class="fas fa-check"></i>
                                                    </button>

                                                    <!-- DELETE BUTTON - Only for Draft -->
                                                    <button type="button" class="btn btn-danger btn-action delete-btn"
                                                            data-id="@entry.Id" data-entry-no="@entry.EntryNo" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }

                                                @if (entry.BarcodesGenerated > 0)
                                                {
                                                    <!-- PRINT BARCODES BUTTON - When barcodes generated -->
                                                    <a asp-action="PrintBarcodes" asp-route-id="@entry.Id"
                                                       class="btn btn-primary btn-action" title="Print Barcodes (@entry.BarcodesGenerated)">
                                                        <i class="fas fa-barcode"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    serialNumber++;
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="card-footer clearfix">
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" style="font-weight: 600; padding-top: 0.5rem;">
                                        Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to
                                        @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount) of
                                        @Model.TotalCount entries
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-7">
                                    <div class="dataTables_paginate paging_simple_numbers float-right">
                                        <ul class="pagination">
                                            @if (Model.HasPrevious)
                                            {
                                                <li class="paginate_button page-item previous">
                                                    <a asp-action="Index"
                                                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                                                       asp-route-storeId="@ViewBag.CurrentStoreId"
                                                       asp-route-status="@ViewBag.CurrentStatus"
                                                       class="page-link">Previous</a>
                                                </li>
                                            }

                                            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                            {
                                                <li class="paginate_button page-item @(i == Model.PageNumber ? "active" : "")">
                                                    <a asp-action="Index"
                                                       asp-route-pageNumber="@i"
                                                       asp-route-storeId="@ViewBag.CurrentStoreId"
                                                       asp-route-status="@ViewBag.CurrentStatus"
                                                       class="page-link">@i</a>
                                                </li>
                                            }

                                            @if (Model.HasNext)
                                            {
                                                <li class="paginate_button page-item next">
                                                    <a asp-action="Index"
                                                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                                                       asp-route-storeId="@ViewBag.CurrentStoreId"
                                                       asp-route-status="@ViewBag.CurrentStatus"
                                                       class="page-link">Next</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Complete stock entry
            $('.complete-btn').click(function() {
                var id = $(this).data('id');
                var btn = $(this);

                Swal.fire({
                    title: 'Complete Stock Entry?',
                    text: "This will finalize the stock entry and update inventory levels.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#dc3545',
                    confirmButtonText: 'Yes, Complete!',
                    cancelButtonText: 'Cancel',
                    customClass: {
                        title: 'swal-title-bold',
                        content: 'swal-content-bold'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        btn.prop('disabled', true);
                        btn.html('<i class="fas fa-spinner fa-spin"></i>');

                        var token = $('input[name="__RequestVerificationToken"]').val();

                        $.ajax({
                            url: '@Url.Action("Complete", "StockEntry")',
                            type: 'POST',
                            data: {
                                id: id,
                                __RequestVerificationToken: token
                            },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Completed!',
                                        text: response.message || 'Stock entry completed successfully',
                                        confirmButtonColor: '#28a745',
                                        customClass: {
                                            title: 'swal-title-bold',
                                            content: 'swal-content-bold'
                                        }
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error!',
                                        text: response.message || 'Failed to complete stock entry',
                                        confirmButtonColor: '#dc3545',
                                        customClass: {
                                            title: 'swal-title-bold',
                                            content: 'swal-content-bold'
                                        }
                                    });
                                    btn.prop('disabled', false);
                                    btn.html('<i class="fas fa-check"></i>');
                                }
                            },
                            error: function(xhr) {
                                console.error('Complete entry error:', xhr);

                                let errorMessage = 'An error occurred while processing your request';
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                }

                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error!',
                                    text: errorMessage,
                                    confirmButtonColor: '#dc3545',
                                    customClass: {
                                        title: 'swal-title-bold',
                                        content: 'swal-content-bold'
                                    }
                                });
                                btn.prop('disabled', false);
                                btn.html('<i class="fas fa-check"></i>');
                            }
                        });
                    }
                });
            });

            // Delete stock entry
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                var entryNo = $(this).data('entry-no');
                var btn = $(this);
                var row = btn.closest('tr');

                Swal.fire({
                    title: 'Delete Stock Entry?',
                    text: `Are you sure you want to delete entry ${entryNo}? This action cannot be undone.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, Delete!',
                    cancelButtonText: 'Cancel',
                    customClass: {
                        title: 'swal-title-bold',
                        content: 'swal-content-bold'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        btn.prop('disabled', true);
                        btn.html('<i class="fas fa-spinner fa-spin"></i>');

                        var token = $('input[name="__RequestVerificationToken"]').val();

                        $.ajax({
                            url: '@Url.Action("Delete", "StockEntry")',
                            type: 'POST',
                            data: {
                                id: id,
                                __RequestVerificationToken: token
                            },
                            success: function(response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Deleted!',
                                        text: response.message || 'Stock entry deleted successfully',
                                        confirmButtonColor: '#28a745',
                                        timer: 2000,
                                        showConfirmButton: false,
                                        customClass: {
                                            title: 'swal-title-bold',
                                            content: 'swal-content-bold'
                                        }
                                    });

                                    // Remove row with animation
                                    row.fadeOut(500, function() {
                                        $(this).remove();

                                        // If no more rows, reload page
                                        if ($('tbody tr').length === 0) {
                                            location.reload();
                                        }
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error!',
                                        text: response.message || 'Failed to delete stock entry',
                                        confirmButtonColor: '#dc3545',
                                        customClass: {
                                            title: 'swal-title-bold',
                                            content: 'swal-content-bold'
                                        }
                                    });
                                    btn.prop('disabled', false);
                                    btn.html('<i class="fas fa-trash"></i>');
                                }
                            },
                            error: function(xhr) {
                                console.error('Delete entry error:', xhr);

                                let errorMessage = 'An error occurred while deleting the entry';
                                if (xhr.responseJSON && xhr.responseJSON.message) {
                                    errorMessage = xhr.responseJSON.message;
                                }

                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error!',
                                    text: errorMessage,
                                    confirmButtonColor: '#dc3545',
                                    customClass: {
                                        title: 'swal-title-bold',
                                        content: 'swal-content-bold'
                                    }
                                });
                                btn.prop('disabled', false);
                                btn.html('<i class="fas fa-trash"></i>');
                            }
                        });
                    }
                });
            });
        });
    </script>

    <style>
        /* Make SweetAlert text more visible */
        .swal-title-bold {
            font-weight: 700 !important;
            font-size: 1.5rem !important;
        }

        .swal-content-bold {
            font-weight: 600 !important;
            font-size: 1.1rem !important;
        }

        .swal2-html-container {
            font-weight: 600 !important;
            font-size: 1rem !important;
        }

        .swal2-styled {
            font-weight: 600 !important;
            font-size: 1rem !important;
            padding: 0.625rem 2rem !important;
        }
    </style>
}