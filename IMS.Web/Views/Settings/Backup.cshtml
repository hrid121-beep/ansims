@{
    ViewData["Title"] = "Database Backup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Database Backup & Restore</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="SettingsDashboard">Settings</a></li>
                    <li class="breadcrumb-item active">Database Backup</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <!-- Database Backup Card -->
            <div class="col-lg-12 mb-4">
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-database"></i> Database Backup
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h5 class="text-success">Backup Entire Database</h5>
                            <p class="text-muted">
                                Download a complete backup of your database for safekeeping or migration.
                            </p>
                        </div>

                        <div class="alert alert-info">
                            <h6 class="alert-heading"><i class="fas fa-info-circle"></i> Backup includes:</h6>
                            <ul class="mb-0">
                                <li>All database tables and data</li>
                                <li>User accounts and roles</li>
                                <li>Approval settings and workflows</li>
                                <li>Transaction history</li>
                                <li>All system configurations</li>
                            </ul>
                        </div>

                        <div class="callout callout-success">
                            <h6><i class="fas fa-shield-alt"></i> Backup Formats Available</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <strong>.BAK Format (Binary Backup)</strong>
                                    <ul class="mb-2">
                                        <li>Native SQL Server backup file</li>
                                        <li>Compressed and optimized</li>
                                        <li>Restore using SQL Server Management Studio</li>
                                        <li>Fastest backup option</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <strong>.SQL Format (Script Export)</strong>
                                    <ul class="mb-0">
                                        <li>Complete SQL script with schema + data</li>
                                        <li>Portable and readable</li>
                                        <li>Can be edited in any text editor</li>
                                        <li>Useful for migration and inspection</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-clock"></i>
                            <strong>Please wait:</strong> Backup process may take several minutes. Do not close the browser.
                        </div>

                        <div class="mt-4">
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <a asp-action="BackupDatabase" asp-route-format="bak" class="btn btn-success btn-lg btn-block" onclick="showBackupProgress()">
                                        <i class="fas fa-database"></i> Download .BAK Backup (Binary)
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a asp-action="BackupDatabase" asp-route-format="sql" class="btn btn-info btn-lg btn-block" onclick="showBackupProgress()">
                                        <i class="fas fa-file-code"></i> Download .SQL Script (Text)
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Backup files can be restored using SQL Server Management Studio or sqlcmd
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- How to Use Section -->
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-question-circle"></i> How to Use
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-success"><i class="fas fa-database"></i> Creating a Backup</h6>
                                <ol>
                                    <li>Choose backup format:
                                        <ul>
                                            <li><strong>.BAK</strong> - For SQL Server restore (faster)</li>
                                            <li><strong>.SQL</strong> - For portability and inspection</li>
                                        </ul>
                                    </li>
                                    <li>Click the corresponding download button</li>
                                    <li>Wait for backup to complete (progress shown)</li>
                                    <li>File will download automatically</li>
                                    <li>Store backup file in a safe location</li>
                                </ol>
                                <div class="alert alert-warning mt-2">
                                    <strong>Recommended:</strong> Take regular backups (daily/weekly)
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-primary"><i class="fas fa-redo"></i> Restoring from Backup</h6>
                                <p class="mb-2"><strong>For .BAK files:</strong></p>
                                <ol class="mb-3">
                                    <li>Open SQL Server Management Studio (SSMS)</li>
                                    <li>Right-click on Databases â†’ Restore Database</li>
                                    <li>Select "Device" and browse to your .BAK file</li>
                                    <li>Click OK to restore</li>
                                </ol>
                                <p class="mb-2"><strong>For .SQL files:</strong></p>
                                <ol class="mb-0">
                                    <li>Open the .SQL file in any text editor</li>
                                    <li>Review the script before executing</li>
                                    <li>Execute in SSMS or sqlcmd</li>
                                </ol>
                                <div class="alert alert-danger mt-2">
                                    <strong>Warning:</strong> Restoring will overwrite the existing database!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function showBackupProgress() {
            Swal.fire({
                title: 'Creating Database Backup',
                html: `
                    <div class="text-center">
                        <i class="fas fa-database fa-3x text-success mb-3"></i>
                        <p>Please wait while we backup your database...</p>
                        <p class="text-muted">This may take several minutes</p>
                        <div class="progress mt-3">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                `,
                showConfirmButton: false,
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Close after 3 seconds (backup will continue in background)
            setTimeout(() => {
                Swal.close();
            }, 3000);
        }
    </script>
}
