@model IMS.Application.DTOs.AllotmentLetterDto
@{
    ViewData["Title"] = "Allotment Letter Details";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Allotment Letter Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Allotment Letters</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <!-- Basic Information -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-file-contract"></i> Allotment Letter #@Model.AllotmentNo
                        </h3>
                        <div class="card-tools">
                            @switch (Model.Status)
                            {
                                case "Draft":
                                    <span class="badge badge-warning badge-lg">Draft</span>
                                    break;
                                case "Active":
                                    <span class="badge badge-success badge-lg">Active</span>
                                    break;
                                case "Completed":
                                    <span class="badge badge-info badge-lg">Completed</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge badge-danger badge-lg">Cancelled</span>
                                    break;
                                case "Rejected":
                                    <span class="badge badge-danger badge-lg">Rejected</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <th width="40%">Allotment No:</th>
                                        <td><strong>@Model.AllotmentNo</strong></td>
                                    </tr>
                                    <tr>
                                        <th>Allotment Date:</th>
                                        <td>@Model.AllotmentDate.ToString("dd MMM yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th>Valid From:</th>
                                        <td>@Model.ValidFrom.ToString("dd MMM yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th>Valid Until:</th>
                                        <td>
                                            @Model.ValidUntil.ToString("dd MMM yyyy")
                                            @if (Model.IsExpired)
                                            {
                                                <span class="badge badge-danger ml-2">Expired</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Reference No:</th>
                                        <td>@(Model.ReferenceNo ?? "-")</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <th width="40%">From Store:</th>
                                        <td>@Model.FromStoreName</td>
                                    </tr>
                                    @if (Model.TotalRecipients > 0)
                                    {
                                        <tr>
                                            <th>Issued To (@Model.TotalRecipients Recipients):</th>
                                            <td>
                                                @foreach (var recipient in Model.Recipients.OrderBy(r => r.SerialNo))
                                                {
                                                    <span class="badge badge-dark mr-1 mb-1">
                                                        @recipient.SerialNo. @(recipient.RecipientName ?? recipient.RecipientNameBn)
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <th>Issued To Type:</th>
                                            <td>@Model.IssuedToType</td>
                                        </tr>
                                        <tr>
                                            <th>Issued To:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.IssuedToBattalionName))
                                                {
                                                    <span class="badge badge-dark">@Model.IssuedToBattalionName</span>
                                                }
                                                else if (!string.IsNullOrEmpty(Model.IssuedToRangeName))
                                                {
                                                    <span class="badge badge-primary">@Model.IssuedToRangeName</span>
                                                }
                                                else if (!string.IsNullOrEmpty(Model.IssuedToZilaName))
                                                {
                                                    <span class="badge badge-success">@Model.IssuedToZilaName</span>
                                                }
                                                else
                                                {
                                                    <span>@Model.IssuedTo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <th>Created By:</th>
                                        <td>@Model.CreatedBy</td>
                                    </tr>
                                    <tr>
                                        <th>Created At:</th>
                                        <td>@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <h6><strong>Purpose:</strong></h6>
                                <p class="text-muted">@Model.Purpose</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.DocumentPath))
                        {
                            <div class="row mt-3">
                                <div class="col-12">
                                    <h6><strong>Document:</strong></h6>
                                    <a href="@Model.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-file-pdf"></i> View Document
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Allotted Items -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Allotted Items</h3>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Item Code</th>
                                    <th>Item Name</th>
                                    <th>Allotted Qty</th>
                                    <th>Issued Qty</th>
                                    <th>Remaining</th>
                                    <th>Unit</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td><strong>@item.ItemCode</strong></td>
                                        <td>@item.ItemName</td>
                                        <td class="text-right">@item.AllottedQuantity</td>
                                        <td class="text-right">@item.IssuedQuantity</td>
                                        <td class="text-right">
                                            <strong>@item.RemainingQuantity</strong>
                                        </td>
                                        <td>@item.Unit</td>
                                        <td>
                                            @if (item.RemainingQuantity == 0)
                                            {
                                                <span class="badge badge-success">Fully Issued</span>
                                            }
                                            else if (item.IssuedQuantity > 0)
                                            {
                                                <span class="badge badge-warning">Partially Issued</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Summary Card -->
            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Summary</h3>
                    </div>
                    <div class="card-body">
                        <div class="info-box bg-light">
                            <span class="info-box-icon bg-info"><i class="fas fa-boxes"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Items</span>
                                <span class="info-box-number">@Model.TotalItems</span>
                            </div>
                        </div>

                        <div class="info-box bg-light">
                            <span class="info-box-icon bg-primary"><i class="fas fa-cubes"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Quantity</span>
                                <span class="info-box-number">@Model.TotalQuantity</span>
                            </div>
                        </div>

                        <div class="info-box bg-light">
                            <span class="info-box-icon bg-success"><i class="fas fa-check"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Issued</span>
                                <span class="info-box-number">@Model.TotalIssued</span>
                            </div>
                        </div>

                        <div class="info-box bg-light">
                            <span class="info-box-icon bg-warning"><i class="fas fa-hourglass-half"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Remaining</span>
                                <span class="info-box-number">@Model.TotalRemaining</span>
                            </div>
                        </div>

                        @if (Model.ApprovedBy != null)
                        {
                            <hr />
                            <p class="text-sm">
                                <strong>Approved By:</strong> @Model.ApprovedBy<br />
                                <strong>Approved Date:</strong> @Model.ApprovedDate?.ToString("dd MMM yyyy")
                            </p>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Actions</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (Model.Status == "Draft")
                            {
                                <form asp-action="SubmitForApproval" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success btn-block mb-2"
                                            onclick="return confirm('Are you sure you want to submit this allotment letter for approval?')">
                                        <i class="fas fa-paper-plane"></i> Submit for Approval
                                    </button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            }

                            @if (Model.Status == "Pending")
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="fas fa-clock"></i> Pending approval from DD Provision
                                </div>
                            }

                            @if (Model.CanIssue)
                            {
                                <a asp-controller="Issue" asp-action="Create" asp-route-allotmentId="@Model.Id"
                                   class="btn btn-warning btn-block mb-2">
                                    <i class="fas fa-share-square"></i> Create Issue
                                </a>
                            }

                            <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-info btn-block mb-2" target="_blank">
                                <i class="fas fa-print"></i> Print (Simple)
                            </a>

                            <a asp-action="PrintGovernment" asp-route-id="@Model.Id" class="btn btn-success btn-block mb-2" target="_blank">
                                <i class="fas fa-file-alt"></i> Print (Government Format)
                            </a>

                            <a asp-action="ExportPDF" asp-route-id="@Model.Id" class="btn btn-warning btn-block mb-2" target="_blank">
                                <i class="fas fa-file-pdf"></i> Export PDF
                            </a>

                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
