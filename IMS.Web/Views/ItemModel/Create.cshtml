@model IMS.Application.DTOs.ItemModelDto
@{
    ViewData["Title"] = "Create Item Model";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create Item Model</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Item Models</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">New Item Model</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BrandId" class="control-label">Brand</label>
                                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                                    <option value="">-- Select Brand --</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ModelNumber" class="control-label">Model Number</label>
                                <input asp-for="ModelNumber" class="form-control" placeholder="Enter model number" />
                                <span asp-validation-for="ModelNumber" class="text-danger"></span>
                                <small class="form-text text-muted">Unique identifier for this model</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Model Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter model name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create Model
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}