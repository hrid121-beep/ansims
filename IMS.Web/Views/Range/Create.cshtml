@model IMS.Application.DTOs.RangeDto
@{
    ViewData["Title"] = "Create Range";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Create Range</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Ranges</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Messages -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Error!</strong> @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i>
                <strong>Success!</strong> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-map-marked-alt"></i> Range Information
                        </h3>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Basic Information -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">
                                            <i class="fas fa-map-marker-alt text-primary"></i> Range Name *
                                        </label>
                                        <input asp-for="Name" class="form-control" placeholder="e.g., Dhaka Range, Chittagong Range" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Code" class="control-label">
                                            <i class="fas fa-barcode text-info"></i> Range Code
                                        </label>
                                        <div class="input-group">
                                            <input asp-for="Code" class="form-control" placeholder="Will be auto-generated"
                                                   readonly style="background-color: #f8f9fa;" />
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" id="generateCodeBtn">
                                                    <i class="fas fa-sync-alt"></i> Generate
                                                </button>
                                                <button type="button" class="btn btn-outline-warning" id="editCodeBtn">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                        <small class="text-muted">
                                            <i class="fas fa-lightbulb"></i>
                                            Code is auto-generated based on range name
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Location Information -->
                            <h5 class="mt-4 mb-3 text-primary">
                                <i class="fas fa-building"></i> Location Details
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="HeadquarterLocation" class="control-label">Headquarter Location</label>
                                        <input asp-for="HeadquarterLocation" class="form-control" placeholder="e.g., Pilkhana, Dhaka" />
                                        <span asp-validation-for="HeadquarterLocation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CoverageArea" class="control-label">Coverage Area</label>
                                        <input asp-for="CoverageArea" class="form-control" placeholder="e.g., Dhaka, Gazipur, Narayanganj" />
                                        <span asp-validation-for="CoverageArea" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Commander Information -->
                            <h5 class="mt-4 mb-3 text-primary">
                                <i class="fas fa-user-tie"></i> Commander Information
                            </h5>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="CommanderName" class="control-label">Commander Name</label>
                                        <input asp-for="CommanderName" class="form-control" placeholder="e.g., Md. Abdul Rahman" />
                                        <span asp-validation-for="CommanderName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="CommanderRank" class="control-label">Commander Rank</label>
                                        <select asp-for="CommanderRank" class="form-control">
                                            <option value="">Select Rank</option>
                                            <optgroup label="General Officers">
                                                <option value="Brigadier" selected>Brigadier</option>
                                                <option value="Colonel">Colonel</option>
                                            </optgroup>
                                            <optgroup label="Field Officers">
                                                <option value="Lieutenant Colonel">Lieutenant Colonel</option>
                                                <option value="Major">Major</option>
                                            </optgroup>
                                            <optgroup label="Company Officers">
                                                <option value="Captain">Captain</option>
                                                <option value="Lieutenant">Lieutenant</option>
                                                <option value="Second Lieutenant">Second Lieutenant</option>
                                            </optgroup>
                                            <optgroup label="VDP Ranks">
                                                <option value="Commandant">Commandant</option>
                                                <option value="Assistant Commandant">Assistant Commandant</option>
                                                <option value="Instructor">Instructor</option>
                                                <option value="Assistant Instructor">Assistant Instructor</option>
                                            </optgroup>
                                        </select>
                                        <span asp-validation-for="CommanderRank" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="ContactNumber" class="control-label">Contact Number</label>
                                        <input asp-for="ContactNumber" class="form-control" placeholder="e.g., +8801XXXXXXXXX" />
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact & Status -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label">Email Address</label>
                                        <input asp-for="Email" class="form-control" placeholder="e.g., dhaka.range@ansarvdp.gov.bd" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Status</label>
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" asp-for="IsActive" class="custom-control-input" checked />
                                            <label class="custom-control-label" asp-for="IsActive">Active</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Remarks -->
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label">Remarks</label>
                                <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Enter any additional information"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Range
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            console.log('Page loaded'); // Debug log

            // Generate code when name changes
            $('#Name').on('blur', function() {
                console.log('Name field blur triggered'); // Debug log
                generateCode();
            });

            // Generate code button click
            $('#generateCodeBtn').click(function() {
                console.log('Generate button clicked'); // Debug log
                generateCode();
            });

            // Edit code button
            $('#editCodeBtn').click(function() {
                console.log('Edit button clicked'); // Debug log
                $('#Code').prop('readonly', false).css('background-color', 'white').focus();
            });

            // Function to generate code
            function generateCode() {
                var name = $('#Name').val();
                console.log('Generating code for name:', name); // Debug log

                // Show loading
                $('#generateCodeBtn').html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("GenerateCodeFromName", "Range")',
                    type: 'GET',
                    data: { name: name },
                    success: function(response) {
                        console.log('Response received:', response); // Debug log

                        if (response.success) {
                            $('#Code').val(response.code);
                            $('#Code').removeClass('is-invalid');
                            console.log('Code generated:', response.code);
                        } else {
                            console.log('Failed to generate code:', response.message);
                            alert('Failed to generate code: ' + (response.message || 'Unknown error'));
                        }
                    },
                    error: function(xhr, status, error) {
                        console.log('AJAX error:', error); // Debug log
                        console.log('Status:', status);
                        console.log('Response:', xhr.responseText);
                        alert('Error generating code. Please try again.');
                    },
                    complete: function() {
                        // Reset button
                        $('#generateCodeBtn').html('<i class="fas fa-sync-alt"></i> Generate').prop('disabled', false);
                    }
                });
            }

            // Validate code when manually entered
            $('#Code').on('blur', function() {
                var code = $(this).val();
                if (code && code.trim() !== '') {
                    $.get('@Url.Action("CheckCodeExists", "Range")', { code: code })
                        .done(function(isValid) {
                            if (!isValid) {
                                $('#Code').addClass('is-invalid');
                                alert('Code "' + code + '" is already in use.');
                            } else {
                                $('#Code').removeClass('is-invalid');
                            }
                        })
                        .fail(function() {
                            console.log('Failed to check code uniqueness');
                        });
                }
            });

            // Generate initial code if name exists
            if ($('#Name').val()) {
                generateCode();
            }
        });
    </script>
}