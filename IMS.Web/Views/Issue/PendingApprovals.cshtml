@model IMS.Application.Helpers.PagedResult<IMS.Application.DTOs.IssueDto>
@{
    ViewData["Title"] = "Pending Approvals";
    var items = Model.Items;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-clipboard-check"></i> Pending Approvals
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Issues</a></li>
                    <li class="breadcrumb-item active">Pending Approvals</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.TotalCount</h3>
                        <p>Pending Approvals</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-clock"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@items.Count(i => (DateTime.Now - i.CreatedAt).TotalDays > 3)</h3>
                        <p>Overdue (>3 days)</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-alert"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@items.Count(i => i.TotalValue > 50000)</h3>
                        <p>High Value</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-cash"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@items.Count(i => (DateTime.Now - i.CreatedAt).TotalHours <= 24)</h3>
                        <p>Today</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-calendar"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Issues Awaiting Approval</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Priority Filter:</label>
                            <select class="form-control" id="priorityFilter">
                                <option value="">All Priorities</option>
                                <option value="urgent">Urgent (>3 days)</option>
                                <option value="high">High Value (>50K)</option>
                                <option value="normal">Normal</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Issue Type:</label>
                            <select class="form-control" id="typeFilter">
                                <option value="">All Types</option>
                                <option value="Battalion">Battalion</option>
                                <option value="Range">Range</option>
                                <option value="Zila">Zila</option>
                                <option value="Upazila">Upazila</option>
                                <option value="Individual">Individual</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Search:</label>
                            <input type="text" class="form-control" id="searchBox"
                                   placeholder="Search by Issue No or Issued To...">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label>&nbsp;</label>
                        <button type="button" class="btn btn-primary btn-block" onclick="applyFilters()">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                    </div>
                </div>

                @if (items != null && items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="approvalsTable">
                            <thead>
                                <tr>
                                    <th width="10%">Issue No</th>
                                    <th width="10%">Date</th>
                                    <th width="15%">Issued To</th>
                                    <th width="15%">Purpose</th>
                                    <th width="8%">Items</th>
                                    <th width="10%">Value</th>
                                    <th width="10%">Age</th>
                                    <th width="15%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in items)
                                {
                                    var daysPending = (DateTime.Now - item.CreatedAt).TotalDays;
                                    var rowClass = daysPending > 3 ? "table-danger" :
                                    daysPending > 1 ? "table-warning" : "";

                                    <tr class="@rowClass">
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-primary">
                                                <strong>@item.IssueNo</strong>
                                            </a>
                                        </td>
                                        <td>@item.IssueDate.ToString("dd-MMM-yyyy")</td>
                                        <td>
                                            <strong>@item.IssuedToName</strong><br />
                                            <small class="text-muted">@item.IssuedToType</small>
                                        </td>
                                        <td>@item.Purpose</td>
                                        <td class="text-center">
                                            <span class="badge badge-primary">@item.TotalItems</span>
                                        </td>
                                        <td class="text-right">
                                            @if (item.TotalValue > 0)
                                            {
                                                var valueClass = item.TotalValue > 50000 ? "text-danger font-weight-bold" : "";
                                                <span class="@valueClass">৳ @item.TotalValue</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (daysPending > 3)
                                            {
                                                <span class="badge badge-danger">
                                                    @((int)daysPending) days
                                                </span>
                                            }
                                            else if (daysPending > 1)
                                            {
                                                <span class="badge badge-warning">@((int)daysPending) days</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success">Today</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-info" data-toggle="tooltip" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Approve" asp-route-id="@item.Id"
                                                   class="btn btn-success" data-toggle="tooltip" title="Approve">
                                                    <i class="fas fa-check-circle"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger"
                                                        onclick="quickReject(@item.Id, '@item.IssueNo')"
                                                        data-toggle="tooltip" title="Reject">
                                                    <i class="fas fa-times-circle"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No pending approvals at this time.
                    </div>
                }
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer clearfix">
                    <div class="float-left">
                        Showing @items.Count() of @Model.TotalCount pending approvals
                    </div>
                    <div class="float-right">
                        <ul class="pagination pagination-sm m-0">
                            <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                                <a class="page-link" asp-action="PendingApprovals" asp-route-page="@(Model.PageNumber - 1)">«</a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i <= 3 || i > Model.TotalPages - 3 || (i >= Model.PageNumber - 1 && i <= Model.PageNumber + 1))
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" asp-action="PendingApprovals" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                else if (i == 4 && Model.PageNumber > 5)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                                else if (i == Model.TotalPages - 3 && Model.PageNumber < Model.TotalPages - 4)
                                {
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                }
                            }

                            <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                                <a class="page-link" asp-action="PendingApprovals" asp-route-page="@(Model.PageNumber + 1)">»</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="modal fade" id="quickRejectModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title">Reject Issue</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form id="rejectForm">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="rejectIssueId" />
                    <div class="form-group">
                        <label>Rejection Reason <span class="text-danger">*</span></label>
                        <textarea id="rejectReason" class="form-control" rows="4" required
                                  placeholder="Please provide a clear reason for rejection..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="confirmReject()">
                        <i class="fas fa-times"></i> Reject Issue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });

        function applyFilters() {
            var priority = $('#priorityFilter').val();
            var type = $('#typeFilter').val();
            var search = $('#searchBox').val().toLowerCase();

            $('#approvalsTable tbody tr').each(function() {
                var row = $(this);
                var show = true;

                if (priority === 'urgent' && !row.hasClass('table-danger')) {
                    show = false;
                }
                if (priority === 'high' && row.find('td:eq(5) .text-danger').length === 0) {
                    show = false;
                }

                if (type) {
                    var rowType = row.find('td:eq(2) small').text().trim();
                    if (rowType !== type) {
                        show = false;
                    }
                }

                if (search) {
                    var text = row.text().toLowerCase();
                    if (text.indexOf(search) === -1) {
                        show = false;
                    }
                }

                row.toggle(show);
            });
        }

        function quickReject(id, issueNo) {
            $('#rejectIssueId').val(id);
            $('#rejectReason').val('');
            $('#quickRejectModal').modal('show');
        }

        function confirmReject() {
            var id = $('#rejectIssueId').val();
            var reason = $('#rejectReason').val();

            if (!reason || reason.trim() === '') {
                toastr.error('Please provide a rejection reason');
                return;
            }

            $.post('@Url.Action("Reject", "Issue")', {
                id: id,
                reason: reason,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            }).done(function(result) {
                if (result.success) {
                    $('#quickRejectModal').modal('hide');
                    toastr.success('Issue rejected successfully');
                    setTimeout(function() { location.reload(); }, 1000);
                } else {
                    toastr.error(result.message || 'Failed to reject issue');
                }
            }).fail(function() {
                toastr.error('Error rejecting issue');
            });
        }
    </script>
}