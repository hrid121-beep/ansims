@model IEnumerable<IMS.Application.DTOs.WriteOffDto>
@{
    ViewData["Title"] = "Write-offs";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var writeOffs = Model?.ToList() ?? new List<IMS.Application.DTOs.WriteOffDto>();

    // Calculate statistics
    var totalCount = writeOffs.Count();
    var pendingCount = writeOffs.Count(w => w.Status == "Pending");
    var approvedCount = writeOffs.Count(w => w.Status == "Approved");
    var totalValue = writeOffs.Sum(w => w.TotalValue);

    // Group by reason
    var reasonGroups = writeOffs.GroupBy(w => w.Reason ?? "Not Specified")
                                 .Select(g => new { Reason = g.Key, Count = g.Count() })
                                 .OrderByDescending(x => x.Count)
                                 .ToList();
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-trash-alt text-danger"></i> Write-offs
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item">Adjustments</li>
                    <li class="breadcrumb-item active">Write-offs</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-check"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-ban"></i> @TempData["Error"]
            </div>
        }

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-info">
                    <span class="info-box-icon"><i class="fas fa-list"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Write-offs</span>
                        <span class="info-box-number">@totalCount</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-warning">
                    <span class="info-box-icon"><i class="fas fa-clock"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Pending Approval</span>
                        <span class="info-box-number">@pendingCount</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-success">
                    <span class="info-box-icon"><i class="fas fa-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Approved</span>
                        <span class="info-box-number">@approvedCount</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-danger">
                    <span class="info-box-icon"><i class="fas fa-money-bill-wave"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Value</span>
                        <span class="info-box-number">৳@totalValue.ToString("N0")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reason Breakdown Row -->
        @if (reasonGroups.Any())
        {
            <div class="row">
                @foreach (var group in reasonGroups.Take(4))
                {
                    var reasonIcon = group.Reason switch
                    {
                        "Damaged" => "exclamation-triangle",
                        "Expired" => "calendar-times",
                        "Lost" => "search",
                        "Obsolete" => "archive",
                        "Quality Issues" => "times-circle",
                        "Theft" => "user-secret",
                        "Natural Disaster" => "bolt",
                        _ => "tag"
                    };
                    var reasonColor = group.Reason switch
                    {
                        "Damaged" => "warning",
                        "Expired" => "danger",
                        "Lost" => "secondary",
                        "Obsolete" => "info",
                        _ => "primary"
                    };

                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="small-box bg-@reasonColor">
                            <div class="inner">
                                <h3>@group.Count</h3>
                                <p>@group.Reason</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-@reasonIcon"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Filter Section -->
        <div class="card card-danger card-outline collapsed-card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-filter"></i> Filter Options</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Reason:</label>
                                <select name="reason" class="form-control">
                                    <option value="">All Reasons</option>
                                    <option value="Damaged">Damaged</option>
                                    <option value="Expired">Expired</option>
                                    <option value="Lost">Lost</option>
                                    <option value="Obsolete">Obsolete</option>
                                    <option value="Quality Issues">Quality Issues</option>
                                    <option value="Theft">Theft</option>
                                    <option value="Natural Disaster">Natural Disaster</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Status:</label>
                                <select name="status" class="form-control">
                                    <option value="">All Status</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Approved">Approved</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>From Date:</label>
                                <input type="date" name="fromDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Write-off List -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-table"></i> Write-off Records</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> New Write-off
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="writeOffTable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Write-off No</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Items</th>
                            <th>Total Value (৳)</th>
                            <th>Status</th>
                            <th>Approved By</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (writeOffs.Any())
                        {
                            var serial = 1;
                            @foreach (var item in writeOffs.OrderByDescending(w => w.WriteOffDate))
                            {
                                var statusClass = item.Status switch
                                {
                                    "Pending" => "badge-warning",
                                    "Approved" => "badge-success",
                                    "Rejected" => "badge-danger",
                                    _ => "badge-secondary"
                                };

                                var reasonClass = item.Reason switch
                                {
                                    "Damaged" => "badge-warning",
                                    "Expired" => "badge-danger",
                                    "Lost" => "badge-secondary",
                                    "Obsolete" => "badge-info",
                                    "Quality Issues" => "badge-danger",
                                    "Theft" => "badge-dark",
                                    "Natural Disaster" => "badge-danger",
                                    _ => "badge-primary"
                                };

                                <tr>
                                    <td>@serial</td>
                                    <td>
                                        <strong><code>@item.WriteOffNo</code></strong>
                                    </td>
                                    <td>@item.WriteOffDate.ToString("dd-MMM-yyyy")</td>
                                    <td>
                                        <span class="badge @reasonClass">@(item.Reason ?? "Not Specified")</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@item.Items.Count items</span>
                                    </td>
                                    <td class="text-right">
                                        <strong>@item.TotalValue.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@item.Status</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ApprovedBy))
                                        {
                                            @item.ApprovedBy
                                            <br />
                                            <small class="text-muted">@item.ApprovalDate?.ToString("dd-MMM")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pending</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (item.Status == "Pending")
                                            {
                                                <a asp-action="Approve" asp-route-id="@item.Id"
                                                   class="btn btn-success btn-sm" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                serial++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No write-off records found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#writeOffTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "order": [[2, "desc"]], // Sort by date descending
                "columnDefs": [
                    { "orderable": false, "targets": [0, 8] } // Disable sorting on serial and actions
                ]
            });
        });
    </script>
}
