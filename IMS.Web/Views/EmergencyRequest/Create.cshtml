@model IMS.Web.Models.EmergencyRequestViewModel
@{
    ViewData["Title"] = "Emergency Stock Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-danger">
                    <i class="fas fa-exclamation-triangle"></i> Emergency Stock Request
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Emergency Request</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="alert alert-danger">
            <h5><i class="icon fas fa-ban"></i> Emergency Request Guidelines</h5>
            Emergency requests are fast-tracked and bypass normal approval workflows. Use only for critical situations.
        </div>

        <form asp-action="Create" method="post">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Request Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Request Type</label>
                                <select asp-for="IssuedToType" class="form-control" required>
                                    <option value="">Select Type</option>
                                    <option value="Individual">Individual</option>
                                    <option value="Battalion">Battalion</option>
                                    <option value="Range">Range</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Preferred Store (if any)</label>
                                <select asp-for="PreferredStoreId" class="form-control">
                                    <option value="">Any Available Store</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Recipient Name</label>
                                <input asp-for="RecipientName" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Badge/ID No</label>
                                <input asp-for="BadgeNo" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Emergency Purpose/Reason</label>
                        <textarea asp-for="Purpose" class="form-control" rows="3" required
                                  placeholder="Describe the emergency situation..."></textarea>
                    </div>

                    <!-- Emergency Items -->
                    <h4>Required Items</h4>
                    <div id="emergencyItems">
                        <div class="row emergency-item">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Item</label>
                                    <select name="Items[0].ItemId" class="form-control" required>
                                        <option value="">Select Item</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Quantity</label>
                                    <input type="number" name="Items[0].Quantity" class="form-control" min="1" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-sm btn-danger form-control" onclick="removeEmergencyItem(this)">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-info" onclick="addEmergencyItem()">
                        <i class="fas fa-plus"></i> Add More Items
                    </button>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-bolt"></i> Submit Emergency Request
                    </button>
                    <a asp-controller="Issue" asp-action="Create" class="btn btn-secondary">
                        Use Normal Request
                    </a>
                </div>
            </div>
        </form>
    </div>
</section>