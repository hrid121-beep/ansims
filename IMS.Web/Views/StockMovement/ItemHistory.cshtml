@model IEnumerable<IMS.Application.DTOs.StockMovementDto>
@{
    ViewData["Title"] = "Item Movement History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = ViewBag.Item as IMS.Application.DTOs.ItemDto;
    var store = ViewBag.Store as IMS.Application.DTOs.StoreDto;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Item Movement History</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Stock Movements</a></li>
                    <li class="breadcrumb-item active">Item History</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Item Info Card -->
        <div class="card card-primary card-outline">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="text-center">
                            @if (!string.IsNullOrEmpty(item?.ImagePath))
                            {
                                <img src="@item.ImagePath" class="img-fluid rounded" alt="@item.Name" style="max-height: 100px;" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 100px;">
                                    <i class="fas fa-box fa-3x text-muted"></i>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h3>@item?.Name</h3>
                        <p class="text-muted">
                            <strong>Code:</strong> @item?.Code
                            @if (!string.IsNullOrEmpty(item?.CategoryName))
                            {
                                <span class="mx-2">|</span>
                                <strong>Category:</strong> @item?.CategoryName
                            }
                            @if (store != null)
                            {
                                <span class="mx-2">|</span>
                                <strong>Store:</strong> @store.Name
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(item?.Description))
                        {
                            <p>@item.Description</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Count()</h3>
                        <p>Total Movements</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@((Model.Where(m => m.Quantity > 0).Sum(m => (decimal?)m.Quantity) ?? 0).ToString("N2"))</h3>
                        <p>Total Stock In</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@(Math.Abs(Model.Where(m => m.Quantity < 0).Sum(m => (decimal?)m.Quantity) ?? 0).ToString("N2"))</h3>
                        <p>Total Stock Out</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@(Model.Any() ? Model.Last().NewBalance.ToString("N2") : "0.00")</h3>
                        <p>Current Balance</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movement History -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-history"></i> Movement History
                </h3>
                <div class="card-tools">
                    <a asp-action="Index" class="btn btn-sm btn-default">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Store</th>
                                <th>Reference</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Old Balance</th>
                                <th class="text-right">New Balance</th>
                                <th>Moved By</th>
                                <th width="100">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var movement in Model)
                                {
                                    <tr>
                                        <td>@movement.MovementDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @switch (movement.MovementType)
                                            {
                                                case "IN":
                                                    <span class="badge badge-success">Stock In</span>
                                                    break;
                                                case "OUT":
                                                    <span class="badge badge-danger">Stock Out</span>
                                                    break;
                                                case "TRANSFER":
                                                    <span class="badge badge-info">Transfer</span>
                                                    break;
                                                case "ADJUSTMENT":
                                                    <span class="badge badge-warning">Adjustment</span>
                                                    break;
                                                case "PHYSICAL_COUNT":
                                                    <span class="badge badge-primary">Physical Count</span>
                                                    break;
                                                case "RETURN":
                                                    <span class="badge badge-secondary">Return</span>
                                                    break;
                                                case "WRITE_OFF":
                                                    <span class="badge badge-dark">Write-off</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-light">@movement.MovementType</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movement.SourceStoreName) && !string.IsNullOrEmpty(movement.DestinationStoreName))
                                            {
                                                <small>From: @movement.SourceStoreName<br />To: @movement.DestinationStoreName</small>
                                            }
                                            else
                                            {
                                                @movement.StoreName
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movement.ReferenceNo))
                                            {
                                                <small class="text-muted">@movement.ReferenceType</small>
                                                <br />
                                                @movement.ReferenceNo
                                            }
                                        </td>
                                        <td class="text-right">
                                            @if (movement.Quantity > 0)
                                            {
                                                <span class="text-success">+@movement.Quantity</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">@movement.Quantity</span>
                                            }
                                        </td>
                                        <td class="text-right">@movement.OldBalance.ToString("N2")</td>
                                        <td class="text-right">
                                            <strong>@movement.NewBalance.ToString("N2")</strong>
                                        </td>
                                        <td>@movement.MovedBy</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@movement.Id"
                                               class="btn btn-xs btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center">No movements found for this item</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
