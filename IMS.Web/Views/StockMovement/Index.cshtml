@model IMS.Application.Helpers.PagedResult<IMS.Application.DTOs.StockMovementDto>
@{
    ViewData["Title"] = "Stock Movements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Stock Movement History</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Stock Movements</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Summary Statistics -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(Model?.TotalCount ?? 0)</h3>
                        <p>Total Movements</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@(Model?.Items?.Count(m => m.MovementType == "IN" || m.Quantity > 0) ?? 0)</h3>
                        <p>Stock In Movements</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@(Model?.Items?.Count(m => m.MovementType == "OUT" || m.Quantity < 0) ?? 0)</h3>
                        <p>Stock Out Movements</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@(Model?.Items?.Count(m => m.MovementType == "TRANSFER") ?? 0)</h3>
                        <p>Transfer Movements</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-truck"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-filter"></i> Filters
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Store</label>
                                <select name="storeId" class="form-control select2" style="width: 100%;">
                                    <option value="">All Stores</option>
                                    @foreach (var store in ViewBag.Stores as SelectList)
                                    {
                                        <option value="@store.Value" selected="@(store.Value == ViewBag.CurrentStoreId?.ToString())">
                                            @store.Text
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Item</label>
                                <select name="itemId" class="form-control select2" style="width: 100%;">
                                    <option value="">All Items</option>
                                    @foreach (var item in ViewBag.Items as SelectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == ViewBag.CurrentItemId?.ToString())">
                                            @item.Text
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Movement Type</label>
                                <select name="movementType" class="form-control">
                                    <option value="">All Types</option>
                                    @foreach (var type in ViewBag.MovementTypes as SelectList)
                                    {
                                        <option value="@type.Value" selected="@(type.Value == ViewBag.CurrentMovementType)">
                                            @type.Text
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Date Range</label>
                                <div class="input-group">
                                    <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                                    <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filter
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-redo"></i> Reset
                            </a>
                            <a asp-action="Export" asp-route-storeId="@ViewBag.CurrentStoreId"
                               asp-route-itemId="@ViewBag.CurrentItemId"
                               asp-route-movementType="@ViewBag.CurrentMovementType"
                               asp-route-fromDate="@ViewBag.FromDate"
                               asp-route-toDate="@ViewBag.ToDate"
                               class="btn btn-success float-right">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Movement List -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Movement History</h3>
                <div class="card-tools">
                    <a asp-action="Summary" class="btn btn-sm btn-info">
                        <i class="fas fa-chart-pie"></i> View Summary
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Item</th>
                                <th>Store</th>
                                <th>Reference</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Old Balance</th>
                                <th class="text-right">New Balance</th>
                                <th>Moved By</th>
                                <th width="100">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Items?.Any() == true)
                            {
                                @foreach (var movement in Model.Items)
                                {
                                    <tr>
                                        <td>@movement.MovementDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @switch (movement.MovementType)
                                            {
                                                case "IN":
                                                    <span class="badge badge-success">Stock In</span>
                                                    break;
                                                case "OUT":
                                                    <span class="badge badge-danger">Stock Out</span>
                                                    break;
                                                case "TRANSFER":
                                                    <span class="badge badge-info">Transfer</span>
                                                    break;
                                                case "ADJUSTMENT":
                                                    <span class="badge badge-warning">Adjustment</span>
                                                    break;
                                                case "PHYSICAL_COUNT":
                                                    <span class="badge badge-primary">Physical Count</span>
                                                    break;
                                                case "RETURN":
                                                    <span class="badge badge-secondary">Return</span>
                                                    break;
                                                case "WRITE_OFF":
                                                    <span class="badge badge-dark">Write-off</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-light">@movement.MovementType</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@movement.ItemCode</small><br />
                                            @movement.ItemName
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movement.SourceStoreName) && !string.IsNullOrEmpty(movement.DestinationStoreName))
                                            {
                                                <small>From: @movement.SourceStoreName<br />To: @movement.DestinationStoreName</small>
                                            }
                                            else
                                            {
                                                @movement.StoreName
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(movement.ReferenceNo))
                                            {
                                                <small class="text-muted">@movement.ReferenceType</small>
                                    
                                                <br />
                                                @movement.ReferenceNo
                                            }
                                        </td>
                                        <td class="text-right">
                                            @if (movement.Quantity > 0)
                                            {
                                                <span class="text-success">+@movement.Quantity</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">@movement.Quantity</span>
                                            }
                                        </td>
                                        <td class="text-right">@movement.OldBalance.ToString("N2")</td>
                                        <td class="text-right">
                                            <strong>@movement.NewBalance.ToString("N2")</strong>
                                        </td>
                                        <td>@movement.MovedBy</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@movement.Id"
                                               class="btn btn-xs btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center">No movements found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model?.TotalPages > 1)
            {
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        @if (Model.HasPrevious)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                                   asp-route-storeId="@ViewBag.CurrentStoreId"
                                   asp-route-itemId="@ViewBag.CurrentItemId"
                                   asp-route-movementType="@ViewBag.CurrentMovementType">
                                    «
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@i"
                                   asp-route-storeId="@ViewBag.CurrentStoreId"
                                   asp-route-itemId="@ViewBag.CurrentItemId"
                                   asp-route-movementType="@ViewBag.CurrentMovementType">
                                    @i
                                </a>
                            </li>
                        }
                        @if (Model.HasNext)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                                   asp-route-storeId="@ViewBag.CurrentStoreId"
                                   asp-route-itemId="@ViewBag.CurrentItemId"
                                   asp-route-movementType="@ViewBag.CurrentMovementType">
                                    »
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: 'Select an option',
                allowClear: true
            });
        });
    </script>
}