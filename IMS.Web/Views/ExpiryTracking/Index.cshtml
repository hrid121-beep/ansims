@using IMS.Application
@using IMS.Application.DTOs
@model IEnumerable<ExpiryTrackingDto>
@{
    ViewData["Title"] = "Expiry Tracking";
    var statistics = ViewBag.Statistics as ExpiryStatisticsDto;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Expiry Tracking</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Expiry Tracking</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Statistics -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@statistics?.TotalItems</h3>
                        <p>Total Tracked Items</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@statistics?.ExpiredItems</h3>
                        <p>Expired Items</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@statistics?.ExpiringIn7Days</h3>
                        <p>Expiring in 7 Days</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@statistics?.ExpiringIn30Days</h3>
                        <p>Expiring in 30 Days</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Items Expiring Soon</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Add Tracking
                    </a>
                    <a asp-action="Expired" class="btn btn-danger btn-sm">
                        <i class="fas fa-times-circle"></i> View Expired
                    </a>
                    <form asp-action="SendAlerts" method="post" class="d-inline">
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="fas fa-bell"></i> Send Alerts
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Show items expiring in:</label>
                    <select id="daysFilter" class="form-control" style="width: 200px;">
                        <option value="7" selected="@(ViewBag.DaysBeforeExpiry == 7)">7 days</option>
                        <option value="30" selected="@(ViewBag.DaysBeforeExpiry == 30)">30 days</option>
                        <option value="60" selected="@(ViewBag.DaysBeforeExpiry == 60)">60 days</option>
                        <option value="90" selected="@(ViewBag.DaysBeforeExpiry == 90)">90 days</option>
                    </select>
                </div>

                <table class="table table-bordered table-striped" id="expiryTable">
                    <thead>
                        <tr>
                            <th>Item Code</th>
                            <th>Item Name</th>
                            <th>Batch Number</th>
                            <th>Store</th>
                            <th>Quantity</th>
                            <th>Expiry Date</th>
                            <th>Days to Expiry</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var daysToExpiry = (item.ExpiryDate - DateTime.Now).Days;
                            var rowClass = daysToExpiry <= 0 ? "table-danger" : 
                                          daysToExpiry <= 7 ? "table-warning" : 
                                          daysToExpiry <= 30 ? "table-info" : "";
                            
                            <tr class="@rowClass">
                                <td>@item.ItemCode</td>
                                <td>@item.ItemName</td>
                                <td>@item.BatchNumber</td>
                                <td>@item.StoreName</td>
                                <td>@item.Quantity</td>
                                <td>@item.ExpiryDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (daysToExpiry < 0)
                                    {
                                        <span class="badge badge-danger">Expired @Math.Abs(daysToExpiry) days ago</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-@(daysToExpiry <= 7 ? "warning" : "info")">
                                            @daysToExpiry days
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-@(item.Status == "Valid" ? "success" : 
                                                               item.Status == "Warning" ? "warning" : "danger")">
                                        @item.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#expiryTable').DataTable({
                "order": [[5, "asc"]],
                "pageLength": 25
            });

            $('#daysFilter').change(function() {
                window.location.href = '@Url.Action("Index")?daysBeforeExpiry=' + $(this).val();
            });
        });
    </script>
}