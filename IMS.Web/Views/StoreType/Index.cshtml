@model IEnumerable<IMS.Application.DTOs.StoreTypeDto>
@{
    ViewData["Title"] = "Store Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-layer-group"></i> Store Types</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Store Types</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="icon fas fa-check"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="icon fas fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }

        <!-- Summary Cards -->
        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Count()</h3>
                        <p>Total Store Types</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Count(st => st.IsActive)</h3>
                        <p>Active Types</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Sum(st => st.StoreCount)</h3>
                        <p>Total Stores</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@Model.Sum(st => st.CategoryCount)</h3>
                        <p>Total Categories</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-tags"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-list"></i> Store Type Management</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Create New Type
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="storeTypeTable" class="table table-bordered table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th width="80"><i class="fas fa-hashtag"></i> Code</th>
                            <th><i class="fas fa-tag"></i> Name</th>
                            <th><i class="fas fa-info-circle"></i> Description</th>
                            <th width="60" class="text-center"><i class="fas fa-icons"></i> Icon</th>
                            <th width="80" class="text-center"><i class="fas fa-palette"></i> Color</th>
                            <th width="80" class="text-center"><i class="fas fa-tags"></i> Categories</th>
                            <th width="80" class="text-center"><i class="fas fa-warehouse"></i> Stores</th>
                            <th width="80" class="text-center"><i class="fas fa-toggle-on"></i> Status</th>
                            <th width="140" class="text-center"><i class="fas fa-cog"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var storeType in Model)
                        {
                            <tr>
                                <td><code class="badge badge-secondary">@storeType.Code</code></td>
                                <td>
                                    <strong>
                                        @if (!string.IsNullOrEmpty(storeType.Icon))
                                        {
                                            <i class="@storeType.Icon mr-1"></i>
                                        }
                                        @storeType.Name
                                    </strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(storeType.Description))
                                    {
                                        <small class="text-muted">@storeType.Description</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(storeType.Icon))
                                    {
                                        <i class="@storeType.Icon fa-2x" style="color: @storeType.Color"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(storeType.Color))
                                    {
                                        <div style="width: 30px; height: 30px; background-color: @storeType.Color; border-radius: 4px; margin: 0 auto; border: 1px solid #ddd;"></div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-info badge-pill">
                                        @storeType.CategoryCount
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-primary badge-pill">
                                        @storeType.StoreCount
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (storeType.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@storeType.Id"
                                           class="btn btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@storeType.Id"
                                           class="btn btn-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger"
                                                onclick="confirmDelete(@storeType.Id, '@storeType.Name')"
                                                title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#storeTypeTable').DataTable({
                responsive: true,
                autoWidth: false,
                pageLength: 25,
                order: [[1, 'desc']], // Sort descending (latest first)
                columnDefs: [
                    { orderable: false, targets: [3, 8] }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search store types..."
                }
            });
        });

        function confirmDelete(id, name) {
            Swal.fire({
                title: 'Are you sure?',
                html: `Do you want to delete store type <strong>${name}</strong>?<br><small class="text-danger">This action cannot be undone.</small>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    var form = $('#deleteForm');
                    form.attr('action', '@Url.Action("Delete")/' + id);
                    form.submit();
                }
            });
        }
    </script>
}