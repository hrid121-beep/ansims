@model IEnumerable<IMS.Application.DTOs.RequisitionDto>
@{
    ViewData["Title"] = "All Requisitions";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">All Requisitions</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Requisitions</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Requisition List</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> New Requisition
                    </a>
                    <a asp-action="FromLowStock" class="btn btn-warning btn-sm">
                        <i class="fas fa-exclamation-triangle"></i> Low Stock Requisition
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="requisitionTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Requisition No</th>
                            <th>Request Date</th>
                            <th>Required By</th>
                            <th>Requested By</th>
                            <th>Priority</th>
                            <th>Department</th>
                            <th>Status</th>
                            <th>Fulfillment</th>
                            <th>Est. Value</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RequisitionNumber</td>
                                <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.RequiredByDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.RequestedBy</td>
                                <td>
                                    @switch (item.Priority)
                                    {
                                        case "Critical":
                                            <span class="badge badge-danger">@item.Priority</span>
                                            break;
                                        case "Urgent":
                                            <span class="badge badge-warning">@item.Priority</span>
                                            break;
                                        case "High":
                                            <span class="badge badge-info">@item.Priority</span>
                                            break;
                                        default:
                                            <span class="badge badge-secondary">@item.Priority</span>
                                            break;
                                    }
                                </td>
                                <td>@item.Department</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case "Draft":
                                            <span class="badge badge-secondary">Draft</span>
                                            break;
                                        case "Submitted":
                                            <span class="badge badge-info">Submitted</span>
                                            break;
                                        case "Approved":
                                            <span class="badge badge-success">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge badge-danger">Rejected</span>
                                            break;
                                        default:
                                            <span class="badge badge-warning">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@item.FulfillmentStatus</td>
                                <td>৳ @item.EstimatedValue.ToString("N2")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (item.Status == "Draft")
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete requisition @item.RequisitionNumber?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#requisitionTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "order": [[1, "desc"]],
                "buttons": ["excel", "pdf", "print"]
            }).buttons().container().appendTo('#requisitionTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}