@model IMS.Application.DTOs.BarcodeDto
@{
    ViewData["Title"] = "Generate Barcode";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-barcode"></i> Generate Barcode
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Barcodes</a></li>
                    <li class="breadcrumb-item active">Generate</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-plus"></i> Generate Barcode: @Model.ItemName
                        </h3>
                    </div>
                    <form asp-action="Generate" method="post" id="generateForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ItemId" />

                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Item:</strong> @Model.ItemName
                                @if (!string.IsNullOrEmpty(Model.ItemCode))
                                {
                                    <span>(@Model.ItemCode)</span>
                                }
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BarcodeType" class="control-label"></label>
                                        <select asp-for="BarcodeType" class="form-control">
                                            <option value="QRCode">QR Code</option>
                                            <option value="Barcode">Linear Barcode</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BarcodeNumber" class="control-label"></label>
                                        <div class="input-group">
                                            <input asp-for="BarcodeNumber" class="form-control" readonly />
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" onclick="regenerateNumber()">
                                                    <i class="fas fa-sync"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <small class="form-text text-muted">Auto-generated unique number</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="SerialNumber" class="control-label"></label>
                                        <input asp-for="SerialNumber" class="form-control" placeholder="Optional" />
                                        <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BatchNumber" class="control-label"></label>
                                        <input asp-for="BatchNumber" class="form-control" placeholder="Optional" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Location" class="control-label"></label>
                                        <input asp-for="Location" class="form-control" placeholder="Storage location" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StoreId" class="control-label">Store</label>
                                        <select asp-for="StoreId" class="form-control select2">
                                            <option value="">Select Store</option>
                                            @if (ViewBag.Stores != null)
                                            {
                                                @foreach (var store in ViewBag.Stores)
                                                {
                                                    <option value="@store.Value">@store.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReferenceType" class="control-label"></label>
                                        <select asp-for="ReferenceType" class="form-control">
                                            <option value="">Select Type</option>
                                            <option value="StockEntry">Stock Entry</option>
                                            <option value="Purchase">Purchase</option>
                                            <option value="Transfer">Transfer</option>
                                            <option value="Issue">Issue</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Quantity to Generate</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="button" class="btn btn-outline-secondary" onclick="changeQuantity(-1)">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                            </div>
                                            <input type="number" id="quantity" class="form-control text-center" value="1" min="1" max="100" />
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-outline-secondary" onclick="changeQuantity(1)">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Notes" class="control-label"></label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes"></textarea>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="autoPrint">
                                <label class="form-check-label" for="autoPrint">
                                    Automatically print after generation
                                </label>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Item" asp-action="Index" class="btn btn-default">
                                    <i class="fas fa-arrow-left"></i> Back
                                </a>
                                <div>
                                    <button type="button" class="btn btn-info" onclick="previewBarcode()">
                                        <i class="fas fa-eye"></i> Preview
                                    </button>
                                    <button type="submit" class="btn btn-success" id="generateBtn">
                                        <i class="fas fa-barcode"></i> Generate
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-success">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-eye"></i> Preview
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(ViewBag.QRCodeBase64))
                        {
                            <img src="data:image/png;base64,@ViewBag.QRCodeBase64"
                                 alt="Preview" class="img-fluid" style="max-width: 250px;" id="previewImage">
                        }
                        else
                        {
                            <div class="preview-placeholder" id="previewPlaceholder">
                                <i class="fas fa-qrcode fa-4x text-muted"></i>
                                <p class="text-muted mt-2">Preview will appear here</p>
                            </div>
                        }
                        <div class="mt-3">
                            <h6 class="fw-bold">@Model.BarcodeNumber</h6>
                            <p class="text-muted mb-1">@Model.ItemName</p>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-info">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle"></i> Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Item Name:</dt>
                            <dd class="col-sm-7">@Model.ItemName</dd>

                            <dt class="col-sm-5">Item Code:</dt>
                            <dd class="col-sm-7">@(Model.ItemCode ?? "N/A")</dd>

                            <dt class="col-sm-5">Category:</dt>
                            <dd class="col-sm-7">@(Model.CategoryName ?? "N/A")</dd>

                            <dt class="col-sm-5">Store:</dt>
                            <dd class="col-sm-7">@(Model.StoreName ?? "Not Set")</dd>
                        </dl>
                    </div>
                </div>

                <div class="card card-warning">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-lightbulb"></i> Tips
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success"></i>
                                <small>QR codes store more information</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success"></i>
                                <small>Serial numbers help unique identification</small>
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check text-success"></i>
                                <small>Batch numbers useful for tracking</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="previewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Barcode Preview</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <div id="modalPreviewContainer"></div>
                <div class="mt-3">
                    <table class="table table-borderless table-sm">
                        <tr>
                            <td class="fw-bold">Barcode Number:</td>
                            <td id="modalBarcodeNumber"></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Type:</td>
                            <td id="modalBarcodeType"></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Serial Number:</td>
                            <td id="modalSerialNumber"></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap4'
            });

            $('#generateForm').on('submit', function() {
                $('#generateBtn').prop('disabled', true)
                    .html('<i class="fas fa-spinner fa-spin"></i> Generating...');
            });
        });

        function changeQuantity(delta) {
            const input = $('#quantity');
            let value = parseInt(input.val()) || 1;
            value = Math.max(1, Math.min(100, value + delta));
            input.val(value);
        }

        function regenerateNumber() {
            $.post('@Url.Action("GenerateUniqueNumber")')
                .done(function(response) {
                    if (response.success) {
                        $('#BarcodeNumber').val(response.barcodeNumber);
                    }
                })
                .fail(function() {
                    alert('Failed to generate new number');
                });
        }

        function previewBarcode() {
            $('#modalBarcodeNumber').text($('#BarcodeNumber').val());
            $('#modalBarcodeType').text($('#BarcodeType').val());
            $('#modalSerialNumber').text($('#SerialNumber').val() || 'Not set');

            const previewImage = $('#previewImage').clone();
            $('#modalPreviewContainer').html(previewImage);

            $('#previewModal').modal('show');
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        .preview-placeholder {
            border: 2px dashed #ccc;
            border-radius: 8px;
            padding: 40px 20px;
            background: #f8f9fa;
        }
    </style>
}