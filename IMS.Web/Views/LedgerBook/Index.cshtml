@model IEnumerable<IMS.Application.DTOs.LedgerBookDto>
@{
    ViewData["Title"] = "Ledger Books";
    var stores = ViewBag.Stores as IEnumerable<IMS.Application.DTOs.StoreDto> ?? new List<IMS.Application.DTOs.StoreDto>();
    var selectedStoreId = ViewBag.SelectedStoreId as int?;
    var selectedBookType = ViewBag.SelectedBookType as string;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>ðŸ“– Ledger Books Management</h1>
                <p class="text-muted">Manage physical ledger books and page tracking</p>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Ledger Books</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Filter Card -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-filter"></i> Filter Ledger Books</h3>
                <div class="card-tools">
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-download"></i> Export
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#" id="exportCsvBtn">
                                <i class="fas fa-file-csv text-success"></i> Export to CSV
                            </a>
                            <a class="dropdown-item" href="#" id="exportPdfBtn">
                                <i class="fas fa-file-pdf text-danger"></i> Export to PDF
                            </a>
                        </div>
                    </div>
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Create New Ledger Book
                    </a>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" class="form-inline">
                    <div class="form-group mr-3">
                        <label class="mr-2">Store:</label>
                        <select name="storeId" class="form-control" onchange="this.form.submit()">
                            <option value="">All Stores</option>
                            @foreach (var store in stores)
                            {
                                <option value="@store.Id" selected="@(store.Id == selectedStoreId)">@store.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mr-3">
                        <label class="mr-2">Type:</label>
                        <select name="bookType" class="form-control" onchange="this.form.submit()">
                            <option value="">All Types</option>
                            <option value="Issue" selected="@(selectedBookType == "Issue")">Issue</option>
                            <option value="Receive" selected="@(selectedBookType == "Receive")">Receive</option>
                            <option value="Transfer" selected="@(selectedBookType == "Transfer")">Transfer</option>
                            <option value="General" selected="@(selectedBookType == "General")">General</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">
                        <i class="fas fa-undo"></i> Reset
                    </a>
                </form>
            </div>
        </div>

        <!-- Ledger Books List -->
        <div class="row">
            @if (Model.Any())
            {
                @foreach (var book in Model)
                {
                    var statusClass = book.IsClosed ? "danger" :
                                     (book.PagesRemaining <= 10 ? "warning" : "success");
                    var statusIcon = book.IsClosed ? "times-circle" :
                                    (book.PagesRemaining <= 10 ? "exclamation-triangle" : "check-circle");

                    <div class="col-md-6 col-lg-4">
                        <div class="card card-outline card-@statusClass">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-book"></i> <strong>@book.LedgerNo</strong>
                                </h3>
                                <div class="card-tools">
                                    <span class="badge badge-@statusClass">
                                        <i class="fas fa-@statusIcon"></i> @book.Status
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="mb-3">@book.BookName</h5>

                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td><strong>Type:</strong></td>
                                        <td><span class="badge badge-info">@book.BookType</span></td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(book.StoreName))
                                    {
                                        <tr>
                                            <td><strong>Store:</strong></td>
                                            <td>@book.StoreName</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td><strong>Total Pages:</strong></td>
                                        <td>@book.TotalPages</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Current Page:</strong></td>
                                        <td><span class="badge badge-dark">@book.CurrentPageNo</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Pages Used:</strong></td>
                                        <td>@book.PagesUsed</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Remaining:</strong></td>
                                        <td>
                                            <span class="badge badge-@(book.PagesRemaining <= 10 ? "warning" : "success")">
                                                @book.PagesRemaining pages
                                            </span>
                                        </td>
                                    </tr>
                                </table>

                                <!-- Progress Bar -->
                                <div class="progress mb-3">
                                    @{
                                        var percentage = book.TotalPages > 0 ? (book.PagesUsed * 100.0 / book.TotalPages) : 0;
                                        var progressClass = percentage >= 90 ? "danger" :
                                                          (percentage >= 70 ? "warning" : "success");
                                    }
                                    <div class="progress-bar bg-@progressClass" style="width: @percentage%">
                                        @percentage.ToString("F0")%
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(book.Location))
                                {
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-map-marker-alt"></i> Location: @book.Location
                                    </p>
                                }

                                <p class="text-muted small">
                                    <i class="far fa-calendar"></i> Started: @book.StartDate.ToString("dd MMM yyyy")
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group btn-block">
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    @if (!book.IsClosed)
                                    {
                                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" onclick="deleteLedgerBook(@book.Id, '@book.LedgerNo')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info">
                        <h5><i class="icon fas fa-info"></i> No Ledger Books Found!</h5>
                        No ledger books match your filter criteria.
                        <a asp-action="Create" class="alert-link">Create a new ledger book</a> to get started.
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Export handlers
        $('#exportCsvBtn').on('click', function(e) {
            e.preventDefault();
            var storeFilter = $('select[name="storeId"]').val();
            var typeFilter = $('select[name="bookType"]').val();
            var exportUrl = '@Url.Action("ExportToCsv", "LedgerBook")';
            var params = [];
            if (storeFilter) params.push('storeId=' + encodeURIComponent(storeFilter));
            if (typeFilter) params.push('bookType=' + encodeURIComponent(typeFilter));
            if (params.length > 0) exportUrl += '?' + params.join('&');

            Swal.fire({
                title: 'Exporting to CSV...',
                text: 'Please wait while we generate your file.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            window.location.href = exportUrl;
            setTimeout(() => Swal.close(), 2000);
        });

        $('#exportPdfBtn').on('click', function(e) {
            e.preventDefault();
            var storeFilter = $('select[name="storeId"]').val();
            var typeFilter = $('select[name="bookType"]').val();
            var exportUrl = '@Url.Action("ExportToPdf", "LedgerBook")';
            var params = [];
            if (storeFilter) params.push('storeId=' + encodeURIComponent(storeFilter));
            if (typeFilter) params.push('bookType=' + encodeURIComponent(typeFilter));
            if (params.length > 0) exportUrl += '?' + params.join('&');

            Swal.fire({
                title: 'Exporting to PDF...',
                text: 'Please wait while we generate your file.',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            window.location.href = exportUrl;
            setTimeout(() => Swal.close(), 2000);
        });

        function deleteLedgerBook(id, ledgerNo) {
            Swal.fire({
                title: 'Are you sure?',
                html: `Do you want to delete Ledger Book <strong>${ledgerNo}</strong>?<br><br>This action cannot be undone!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: '<i class="fas fa-trash"></i> Yes, Delete it!',
                cancelButtonText: '<i class="fas fa-times"></i> Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Create a form and submit it
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("Delete", "LedgerBook")/' + id;

                    // Add anti-forgery token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    } else {
                        // If no token found in page, add it from meta tag
                        const tokenMeta = document.querySelector('meta[name="__RequestVerificationToken"]');
                        if (tokenMeta) {
                            const tokenInput = document.createElement('input');
                            tokenInput.type = 'hidden';
                            tokenInput.name = '__RequestVerificationToken';
                            tokenInput.value = tokenMeta.content;
                            form.appendChild(tokenInput);
                        }
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
}
@Html.AntiForgeryToken()
