@model IMS.Application.DTOs.LedgerBookCreateDto
@{
    ViewData["Title"] = "Create Ledger Book";
    var stores = ViewBag.Stores as IEnumerable<IMS.Application.DTOs.StoreDto> ?? new List<IMS.Application.DTOs.StoreDto>();
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>ðŸ“– Create New Ledger Book</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Ledger Books</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle"></i> Ledger Book Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LedgerNo">Ledger Number <span class="text-danger">*</span></label>
                                        <input asp-for="LedgerNo" class="form-control" placeholder="e.g., ISS-2025" required />
                                        <small class="form-text text-muted">Unique identifier for this ledger book (e.g., ISS-2025, RCV-001)</small>
                                        <span asp-validation-for="LedgerNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="BookType">Book Type <span class="text-danger">*</span></label>
                                        <select asp-for="BookType" class="form-control" required>
                                            <option value="">Select Type</option>
                                            <option value="Issue">Issue</option>
                                            <option value="Receive">Receive</option>
                                            <option value="Transfer">Transfer</option>
                                            <option value="General">General</option>
                                        </select>
                                        <span asp-validation-for="BookType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="BookName">Book Name <span class="text-danger">*</span></label>
                                <input asp-for="BookName" class="form-control" placeholder="e.g., Issue Ledger Book 2025" required />
                                <span asp-validation-for="BookName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="StoreId">Store (Optional)</label>
                                <select asp-for="StoreId" class="form-control select2">
                                    <option value="">-- Select Store (Optional) --</option>
                                    @foreach (var store in stores)
                                    {
                                        <option value="@store.Id">@store.Name - @store.Code</option>
                                    }
                                </select>
                                <small class="form-text text-muted">Associate this ledger book with a specific store</small>
                                <span asp-validation-for="StoreId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="TotalPages">Total Pages <span class="text-danger">*</span></label>
                                        <input asp-for="TotalPages" type="number" class="form-control" min="1" value="500" required />
                                        <small class="form-text text-muted">Total pages in physical book</small>
                                        <span asp-validation-for="TotalPages" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="StartDate">Start Date <span class="text-danger">*</span></label>
                                        <input asp-for="StartDate" type="date" class="form-control" required />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Location">Physical Location</label>
                                        <input asp-for="Location" class="form-control" placeholder="e.g., Store Room A" />
                                        <small class="form-text text-muted">Where is this book stored?</small>
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Remarks">Remarks</label>
                                <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Additional notes"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create Ledger Book
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title"><i class="fas fa-info-circle"></i> Tips</h3>
                        </div>
                        <div class="card-body">
                            <h6><strong>Ledger Number Format:</strong></h6>
                            <ul class="small">
                                <li><code>ISS-2025</code> - Issue ledger for 2025</li>
                                <li><code>RCV-001</code> - Receive ledger #1</li>
                                <li><code>TRF-DH-01</code> - Transfer ledger Dhaka #1</li>
                            </ul>

                            <h6 class="mt-3"><strong>Book Types:</strong></h6>
                            <ul class="small">
                                <li><strong>Issue:</strong> For item issues</li>
                                <li><strong>Receive:</strong> For item receipts</li>
                                <li><strong>Transfer:</strong> For store transfers</li>
                                <li><strong>General:</strong> For other purposes</li>
                            </ul>

                            <h6 class="mt-3"><strong>Page Tracking:</strong></h6>
                            <p class="small">
                                The system automatically tracks the current page number.
                                When you create issues/receives, the page number will
                                increment automatically.
                            </p>

                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Note:</strong> Ledger number must be unique!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap4'
            });
        });
    </script>
}
