@model IMS.Application.DTOs.ApprovalThresholdDto
@{
    ViewData["Title"] = "Create Approval Threshold";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Create Approval Threshold</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Approval Settings</a></li>
                    <li class="breadcrumb-item active">Create Threshold</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Threshold Details</h3>
                    </div>
                    <form asp-action="CreateThreshold" method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="form-group">
                                <label asp-for="EntityType">Entity Type <span class="text-danger">*</span></label>
                                <select asp-for="EntityType" asp-items="ViewBag.EntityTypes" class="form-control">
                                    <option value="">-- Select Entity Type --</option>
                                </select>
                                <span asp-validation-for="EntityType" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    The type of entity this threshold applies to (e.g., PURCHASE, REQUISITION)
                                </small>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MinAmount">Minimum Amount (৳) <span class="text-danger">*</span></label>
                                        <input asp-for="MinAmount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                                        <small class="form-text text-muted">Lower bound of amount range</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MaxAmount">Maximum Amount (৳)</label>
                                        <input asp-for="MaxAmount" type="number" step="0.01" class="form-control" placeholder="Leave blank for no limit" />
                                        <span asp-validation-for="MaxAmount" class="text-danger"></span>
                                        <small class="form-text text-muted">Upper bound (blank = unlimited)</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ApprovalLevel">Approval Level <span class="text-danger">*</span></label>
                                        <select asp-for="ApprovalLevel" asp-items="ViewBag.ApprovalLevels" class="form-control">
                                            <option value="">-- Select Level --</option>
                                        </select>
                                        <span asp-validation-for="ApprovalLevel" class="text-danger"></span>
                                        <small class="form-text text-muted">Level of approval required (1-5)</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RequiredRole">Required Role <span class="text-danger">*</span></label>
                                        <select asp-for="RequiredRole" asp-items="ViewBag.Roles" class="form-control">
                                            <option value="">-- Select Role --</option>
                                        </select>
                                        <span asp-validation-for="RequiredRole" class="text-danger"></span>
                                        <small class="form-text text-muted">Role authorized to approve</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"
                                          placeholder="Brief description of this threshold rule..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="callout callout-info">
                                <h5><i class="fas fa-info-circle"></i> Examples:</h5>
                                <ul class="mb-0">
                                    <li><strong>PURCHASE: ৳0 - ৳50,000</strong> → Level 1 → StoreManager</li>
                                    <li><strong>PURCHASE: ৳50,001 - ৳200,000</strong> → Level 2 → ZilaCommander</li>
                                    <li><strong>PURCHASE: ৳200,001+</strong> → Level 3 → DirectorGeneral</li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Threshold
                            </button>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
