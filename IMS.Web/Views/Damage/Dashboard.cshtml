@model IMS.Web.Controllers.DamageDashboardViewModel
@{
    ViewData["Title"] = "Damage & Write-offs Dashboard";
}

<div class="page-header">
    <h1><i class="fas fa-tachometer-alt"></i> Damage & Write-offs Dashboard</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Damages</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </nav>
</div>

<!-- Statistics Cards -->
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalDamages</h3>
                <p>Total Damage Reports</p>
            </div>
            <div class="icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <a asp-action="Index" class="small-box-footer">
                View All <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.PendingApproval</h3>
                <p>Pending Approval</p>
            </div>
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
            <a asp-action="Index" asp-route-status="Reported" class="small-box-footer">
                View Details <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>৳@Model.TotalValue.ToString("N0")</h3>
                <p>Total Damage Value</p>
            </div>
            <div class="icon">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <a asp-action="Report" class="small-box-footer">
                View Report <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-gradient-danger">
            <div class="inner">
                <h3>@Model.HighValueDamages</h3>
                <p>High Value (≥৳10,000)</p>
            </div>
            <div class="icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <a asp-controller="WriteOff" asp-action="Index" class="small-box-footer">
                View Write-offs <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row">
    <!-- Status Distribution -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Damage Status Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="statusChart" height="250"></canvas>

                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th class="text-right">Count</th>
                                <th class="text-right">Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var status in Model.StatusCounts.OrderByDescending(x => x.Value))
                            {
                                var percentage = Model.TotalDamages > 0 ? (status.Value * 100.0 / Model.TotalDamages) : 0;
                                <tr>
                                    <td>@status.Key</td>
                                    <td class="text-right">@status.Value</td>
                                    <td class="text-right">@percentage.ToString("F1")%</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Damage Type Distribution -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Damage Type Distribution (Last 30 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="typeChart" height="250"></canvas>

                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th class="text-right">Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var type in Model.TypeCounts.OrderByDescending(x => x.Value).Take(10))
                            {
                                <tr>
                                    <td>@type.Key</td>
                                    <td class="text-right">@type.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Monthly Trend and Recent Damages -->
<div class="row mt-3">
    <!-- Monthly Trend -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Monthly Damage Trend (Last 6 Months)</h5>
            </div>
            <div class="card-body">
                <canvas id="trendChart" height="100"></canvas>

                <div class="mt-3">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th class="text-right">Reports</th>
                                <th class="text-right">Total Value (৳)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var month in Model.MonthlyTrend.OrderByDescending(x => x.Year).ThenByDescending(x => x.Month))
                            {
                                <tr>
                                    <td>@month.MonthName</td>
                                    <td class="text-right">@month.Count</td>
                                    <td class="text-right">@month.TotalValue.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Damages -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Damages</h5>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    @if (Model.RecentDamages != null && Model.RecentDamages.Any())
                    {
                        @foreach (var damage in Model.RecentDamages)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a asp-action="Details" asp-route-id="@damage.Id" class="font-weight-bold">
                                            @damage.DamageNo
                                        </a>
                                        <br />
                                        <small class="text-muted">
                                            @damage.ItemName - @damage.StoreName
                                        </small>
                                    </div>
                                    <div class="text-right">
                                        <span class="badge badge-@(damage.Status == "Reported" ? "info" : damage.Status == "Approved" ? "success" : damage.Status == "Rejected" ? "danger" : "warning")">
                                            @damage.Status
                                        </span>
                                        <br />
                                        <small class="text-muted">@damage.DamageDate.ToString("dd-MMM")</small>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted">
                            No recent damages
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-sm btn-primary">View All Damages</a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-action="CreateMultiItem" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-plus-circle"></i><br />
                            New Damage Report
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-info btn-block btn-lg">
                            <i class="fas fa-list"></i><br />
                            View All Damages
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="WriteOff" asp-action="Index" class="btn btn-danger btn-block btn-lg">
                            <i class="fas fa-trash-alt"></i><br />
                            Write-off Requests
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Report" class="btn btn-success btn-block btn-lg">
                            <i class="fas fa-file-excel"></i><br />
                            Generate Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminlte/plugins/chart.js/Chart.min.js"></script>
    <script>
        // Status Chart
        var statusCtx = document.getElementById('statusChart').getContext('2d');
        var statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.StatusCounts.Select(x => "'" + x.Key.ToString() + "'")))],
                datasets: [{
                    data: [@string.Join(",", Model.StatusCounts.Select(x => x.Value))],
                    backgroundColor: [
                        'rgba(23, 162, 184, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(0, 123, 255, 0.8)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Type Chart
        var typeCtx = document.getElementById('typeChart').getContext('2d');
        var typeChart = new Chart(typeCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.TypeCounts.OrderByDescending(x => x.Value).Take(10).Select(x => "'" + x.Key + "'")))],
                datasets: [{
                    label: 'Number of Damages',
                    data: [@string.Join(",", Model.TypeCounts.OrderByDescending(x => x.Value).Take(10).Select(x => x.Value))],
                    backgroundColor: 'rgba(40, 167, 69, 0.8)',
                    borderColor: 'rgba(40, 167, 69, 1)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Trend Chart
        var trendCtx = document.getElementById('trendChart').getContext('2d');
        var trendChart = new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MonthlyTrend.Select(x => "'" + x.MonthName + "'")))],
                datasets: [
                    {
                        label: 'Number of Reports',
                        data: [@string.Join(",", Model.MonthlyTrend.Select(x => x.Count))],
                        borderColor: 'rgba(23, 162, 184, 1)',
                        backgroundColor: 'rgba(23, 162, 184, 0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Total Value (৳)',
                        data: [@string.Join(",", Model.MonthlyTrend.Select(x => x.TotalValue))],
                        borderColor: 'rgba(220, 53, 69, 1)',
                        backgroundColor: 'rgba(220, 53, 69, 0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                plugins: {
                    legend: {
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        beginAtZero: true,
                        grid: {
                            drawOnChartArea: false
                        }
                    }
                }
            }
        });
    </script>
}
