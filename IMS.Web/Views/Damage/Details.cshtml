@model IMS.Application.DTOs.DamageDto
@{
    ViewData["Title"] = "Damage Report Details";
    var canApprove = ViewBag.CanApprove ?? false;
    var isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="page-header">
    <h1>Damage Report Details</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Damages</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Main Report Card -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> @Model.DamageNo
                </h3>
            </div>
            <div class="card-body">
                <!-- Status Badge -->
                <div class="mb-3">
                    @if (Model.Status == "Reported")
                    {
                        <span class="badge badge-info badge-lg"><i class="fas fa-clock"></i> Reported</span>
                    }
                    else if (Model.Status == "UnderReview")
                    {
                        <span class="badge badge-warning badge-lg"><i class="fas fa-search"></i> Under Review</span>
                    }
                    else if (Model.Status == "Approved")
                    {
                        <span class="badge badge-success badge-lg"><i class="fas fa-check"></i> Approved</span>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <span class="badge badge-danger badge-lg"><i class="fas fa-times"></i> Rejected</span>
                    }
                    else if (Model.Status == "RequiresRepair")
                    {
                        <span class="badge badge-primary badge-lg"><i class="fas fa-wrench"></i> Requires Repair</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary badge-lg">@Model.Status</span>
                    }

                    @if (Model.TotalValue >= 10000)
                    {
                        <span class="badge badge-danger badge-lg ml-2">
                            <i class="fas fa-exclamation-triangle"></i> High Value
                        </span>
                    }
                </div>

                <!-- Report Information -->
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Damage No:</th>
                                <td>@Model.DamageNo</td>
                            </tr>
                            <tr>
                                <th>Date:</th>
                                <td>@Model.DamageDate.ToString("dd-MMM-yyyy")</td>
                            </tr>
                            <tr>
                                <th>Store:</th>
                                <td>@Model.StoreName</td>
                            </tr>
                            <tr>
                                <th>Reported By:</th>
                                <td>@Model.ReportedBy</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Total Value:</th>
                                <td><strong>৳@Model.TotalValue.ToString("N2")</strong></td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>@Model.Status</td>
                            </tr>
                            <tr>
                                <th>Created At:</th>
                                <td>@Model.CreatedAt.ToString("dd-MMM-yyyy HH:mm")</td>
                            </tr>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>@Model.UpdatedAt.Value.ToString("dd-MMM-yyyy HH:mm")</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="mt-3">
                        <h5>General Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(Model.Remarks))
                {
                    <div class="mt-3">
                        <h5>Remarks</h5>
                        <p class="text-muted">@Model.Remarks</p>
                    </div>
                }
            </div>
        </div>

        <!-- Damaged Items Card -->
        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Damaged Items (@Model.Items.Count)</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        <div class="card mb-3 border-left-primary">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h6 class="card-title text-primary">@item.ItemName</h6>
                                        <table class="table table-sm table-borderless">
                                            <tr>
                                                <th width="30%">Quantity:</th>
                                                <td>@item.Quantity</td>
                                            </tr>
                                            <tr>
                                                <th>Damage Type:</th>
                                                <td><span class="badge badge-warning">@item.DamageType</span></td>
                                            </tr>
                                            @if (!string.IsNullOrWhiteSpace(item.BatchNo))
                                            {
                                                <tr>
                                                    <th>Batch No:</th>
                                                    <td>@item.BatchNo</td>
                                                </tr>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(item.Remarks))
                                            {
                                                <tr>
                                                    <th>Remarks:</th>
                                                    <td>@item.Remarks</td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <h4 class="text-primary">৳@item.EstimatedValue.ToString("N2")</h4>
                                        <small class="text-muted">Estimated Value</small>
                                    </div>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(item.Description))
                                {
                                    <div class="mt-2">
                                        <strong>Description:</strong>
                                        <p class="text-muted mb-0">@item.Description</p>
                                    </div>
                                }

                                @if (item.PhotoUrls != null && item.PhotoUrls.Any())
                                {
                                    <div class="mt-3">
                                        <strong>Photos:</strong>
                                        <div class="row mt-2">
                                            @foreach (var photo in item.PhotoUrls)
                                            {
                                                <div class="col-md-3 mb-2">
                                                    <a href="@photo" target="_blank">
                                                        <img src="@photo" class="img-thumbnail" alt="Damage Photo" style="max-height: 150px; width: 100%; object-fit: cover;" />
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (Model.ItemId > 0)
        {
            <!-- Single Item (Old Format) -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-box"></i> Damaged Item</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th width="30%">Item:</th>
                            <td>@Model.ItemName</td>
                        </tr>
                        <tr>
                            <th>Quantity:</th>
                            <td>@Model.Quantity</td>
                        </tr>
                        <tr>
                            <th>Damage Type:</th>
                            <td><span class="badge badge-warning">@Model.DamageType</span></td>
                        </tr>
                        @if (!string.IsNullOrWhiteSpace(Model.Cause))
                        {
                            <tr>
                                <th>Cause:</th>
                                <td>@Model.Cause</td>
                            </tr>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.ActionTaken))
                        {
                            <tr>
                                <th>Action Taken:</th>
                                <td>@Model.ActionTaken</td>
                            </tr>
                        }
                        <tr>
                            <th>Estimated Loss:</th>
                            <td><strong>৳@Model.EstimatedLoss.ToString("N2")</strong></td>
                        </tr>
                    </table>

                    @if (!string.IsNullOrWhiteSpace(Model.PhotoPath))
                    {
                        <div class="mt-3">
                            <strong>Photo Evidence:</strong>
                            <div class="mt-2">
                                <a href="@Model.PhotoPath" target="_blank">
                                    <img src="@Model.PhotoPath" class="img-thumbnail" alt="Damage Photo" style="max-width: 400px;" />
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Actions Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-tasks"></i> Actions</h5>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary btn-block">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>

                @if (canApprove && Model.Status == "Reported")
                {
                    <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#approveModal">
                        <i class="fas fa-check"></i> Approve
                    </button>
                    <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#rejectModal">
                        <i class="fas fa-times"></i> Reject
                    </button>
                    <button type="button" class="btn btn-warning btn-block" data-toggle="modal" data-target="#repairModal">
                        <i class="fas fa-wrench"></i> Mark for Repair
                    </button>
                }

                @if (isAdmin)
                {
                    <a href="#" class="btn btn-primary btn-block">
                        <i class="fas fa-file-pdf"></i> Export to PDF
                    </a>
                }
            </div>
        </div>

        <!-- Summary Card -->
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Summary</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <th>Total Items:</th>
                        <td class="text-right">@(Model.Items?.Count ?? 1)</td>
                    </tr>
                    <tr>
                        <th>Total Quantity:</th>
                        <td class="text-right">@(Model.Items?.Sum(i => i.Quantity) ?? Model.Quantity ?? 0)</td>
                    </tr>
                    <tr class="table-active">
                        <th>Total Value:</th>
                        <th class="text-right text-primary">৳@Model.TotalValue.ToString("N2")</th>
                    </tr>
                </table>

                @if (Model.TotalValue >= 10000)
                {
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        <small>
                            <strong>High Value:</strong> A write-off request may be required.
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="status" value="Approved" />
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="fas fa-check"></i> Approve Damage Report</h5>
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to approve this damage report?</p>
                    <div class="form-group">
                        <label>Remarks</label>
                        <textarea name="remarks" class="form-control" rows="3" placeholder="Add approval remarks (optional)"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="status" value="Rejected" />
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-times"></i> Reject Damage Report</h5>
                    <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to reject this damage report?</p>
                    <div class="form-group">
                        <label>Reason for Rejection *</label>
                        <textarea name="remarks" class="form-control" rows="3" placeholder="Please provide reason for rejection" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Repair Modal -->
<div class="modal fade" id="repairModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="status" value="RequiresRepair" />
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="fas fa-wrench"></i> Mark for Repair</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Mark this damage as requiring repair instead of write-off?</p>
                    <div class="form-group">
                        <label>Repair Instructions</label>
                        <textarea name="remarks" class="form-control" rows="3" placeholder="Add repair instructions (optional)"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Mark for Repair</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add CSRF token to forms
        $('form').each(function () {
            $(this).append('<input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken()" />');
        });
    </script>
}
