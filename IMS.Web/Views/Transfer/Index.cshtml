@model IEnumerable<IMS.Application.DTOs.TransferDto>
@{
    ViewData["Title"] = "Transfers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Transfer Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Transfers</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Stats Row -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Count()</h3>
                        <p>Total Transfers</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Count(t => t.Status == "In Transit")</h3>
                        <p>In Transit</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-truck"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>@Model.Count(t => t.Status == "Approved")</h3>
                        <p>Approved (Ready to Dispatch)</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Count(t => t.Status == "Completed")</h3>
                        <p>Completed</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-double"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Transfer List</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> New Transfer
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="transfersTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 50px;">#</th>
                            <th>Transfer No</th>
                            <th>Date</th>
                            <th>From Store</th>
                            <th>To Store</th>
                            <th>Status</th>
                            <th>Items</th>
                            <th>Remarks</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var serialNo = 1;
                        }
                        @foreach (var item in Model)
                        {
                            var statusBadgeClass = item.Status switch
                            {
                                "Draft" => "badge-secondary",
                                "Approved" => "badge-primary",
                                "In Transit" => "badge-warning",
                                "Completed" => "badge-success",
                                "Cancelled" => "badge-danger",
                                _ => "badge-info"
                            };

                            <tr>
                                <td class="text-center">@serialNo</td>
                                <td><strong>@item.TransferNo</strong></td>
                                <td>@item.TransferDate.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    <i class="fas fa-store text-info"></i> @item.FromStoreName
                                </td>
                                <td>
                                    <i class="fas fa-store text-success"></i> @item.ToStoreName
                                </td>
                                <td>
                                    <span class="badge @statusBadgeClass">@item.Status</span>
                                </td>
                                <td><span class="badge badge-info">@item.Items.Count items</span></td>
                                <td>@(string.IsNullOrEmpty(item.Remarks) ? "-" : item.Remarks)</td>
                                <td class="text-nowrap">
                                    <!-- Status-based Action Buttons -->
                                    @if (item.Status == "Approved")
                                    {
                                        <form asp-action="Dispatch" asp-route-id="@item.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm" title="Dispatch Transfer"
                                                    onclick="return confirm('Dispatch this transfer? Stock will be deducted from source store.')">
                                                <i class="fas fa-truck"></i> Dispatch
                                            </button>
                                        </form>
                                    }
                                    else if (item.Status == "In Transit")
                                    {
                                        <a asp-action="Receive" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Receive Transfer">
                                            <i class="fas fa-check-circle"></i> Receive
                                        </a>
                                    }

                                    <!-- Common Actions -->
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Print" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" target="_blank" title="Print">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <a asp-action="Track" asp-route-code="@item.TransferNo" class="btn btn-sm btn-outline-secondary" title="Track">
                                        <i class="fas fa-route"></i>
                                    </a>
                                </td>
                                serialNo++; }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $("#transfersTable").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "order": [[1, "desc"]],
                "buttons": [
                    {
                        extend: 'copy',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'print',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    }
                ]
            }).buttons().container().appendTo('#transfersTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}