@model IMS.Application.DTOs.StockAdjustmentDto
@{
    ViewData["Title"] = "Stock Adjustment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <i class="fas fa-sliders-h text-secondary"></i> Adjustment Details
                    <small class="text-muted">@Model.AdjustmentNo</small>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Adjustments</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Status Alert -->
        @{
            var statusClass = Model.Status switch
            {
                "Pending" => "alert-warning",
                "Approved" => "alert-success",
                "Rejected" => "alert-danger",
                _ => "alert-secondary"
            };
        }
        <div class="alert @statusClass">
            <h5>
                <i class="icon fas fa-info"></i> Status:
                <span class="badge @(Model.Status == "Pending" ? "badge-warning" : Model.Status == "Approved" ? "badge-success" : "badge-danger")">
                    @Model.Status
                </span>
            </h5>
            @if (!string.IsNullOrEmpty(Model.RejectionReason))
            {
                <p class="mb-0"><strong>Rejection Reason:</strong> @Model.RejectionReason</p>
            }
        </div>

        <!-- Basic Information -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-info-circle"></i> Basic Information</h3>
                <div class="card-tools">
                    <div class="btn-group">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-download"></i> Export
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="javascript:window.print()">
                                <i class="fas fa-print text-info"></i> Print
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Adjustment Number:</th>
                                <td><code>@Model.AdjustmentNo</code></td>
                            </tr>
                            <tr>
                                <th>Adjustment Date:</th>
                                <td>@Model.AdjustmentDate.ToString("dd MMMM yyyy")</td>
                            </tr>
                            <tr>
                                <th>Store:</th>
                                <td>@Model.StoreName</td>
                            </tr>
                            <tr>
                                <th>Adjustment Type:</th>
                                <td>
                                    @if (Model.AdjustmentType == "Increase")
                                    {
                                        <span class="badge badge-primary"><i class="fas fa-arrow-up"></i> Increase</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary"><i class="fas fa-arrow-down"></i> Decrease</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Reference Document:</th>
                                <td>@(Model.ReferenceDocument ?? "-")</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Created Date:</th>
                                <td>@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                            {
                                <tr>
                                    <th>Approved By:</th>
                                    <td>@Model.ApprovedBy</td>
                                </tr>
                                <tr>
                                    <th>Approved Date:</th>
                                    <td>@Model.ApprovedDate?.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.RejectedBy))
                            {
                                <tr>
                                    <th>Rejected By:</th>
                                    <td>@Model.RejectedBy</td>
                                </tr>
                                <tr>
                                    <th>Rejected Date:</th>
                                    <td>@Model.RejectedDate?.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Adjustment Summary -->
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-info">
                    <span class="info-box-icon"><i class="fas fa-box"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Item Code</span>
                        <span class="info-box-number">@Model.ItemCode</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-secondary">
                    <span class="info-box-icon"><i class="fas fa-cubes"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Old Quantity</span>
                        <span class="info-box-number">@Model.OldQuantity</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box bg-primary">
                    <span class="info-box-icon"><i class="fas fa-boxes"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">New Quantity</span>
                        <span class="info-box-number">@Model.NewQuantity</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                <div class="info-box @(Model.AdjustmentType == "Increase" ? "bg-success" : "bg-danger")">
                    <span class="info-box-icon"><i class="fas fa-calculator"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Adjustment</span>
                        <span class="info-box-number">
                            @if (Model.AdjustmentType == "Increase")
                            {
                                <text>+@Model.AdjustmentQuantity</text>
                            }
                            else
                            {
                                <text>-@Model.AdjustmentQuantity</text>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Item Details -->
        <div class="card card-warning card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-box-open"></i> Item Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <table class="table table-sm">
                            <tr>
                                <th width="30%">Item Code:</th>
                                <td><code>@Model.ItemCode</code></td>
                            </tr>
                            <tr>
                                <th>Item Name:</th>
                                <td>@Model.ItemName</td>
                            </tr>
                            <tr>
                                <th>Old Quantity:</th>
                                <td class="text-right">@Model.OldQuantity</td>
                            </tr>
                            <tr>
                                <th>New Quantity:</th>
                                <td class="text-right">@Model.NewQuantity</td>
                            </tr>
                            <tr>
                                <th>Adjustment Quantity:</th>
                                <td class="text-right">
                                    @if (Model.AdjustmentType == "Increase")
                                    {
                                        <span class="font-weight-bold text-success">+@Model.AdjustmentQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="font-weight-bold text-danger">-@Model.AdjustmentQuantity</span>
                                    }
                                </td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.AdjustmentPercentage))
                            {
                                <tr>
                                    <th>Percentage Change:</th>
                                    <td class="text-right">@Model.AdjustmentPercentage</td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="col-md-4">
                        <div class="callout @(Model.AdjustmentType == "Increase" ? "callout-success" : "callout-danger")">
                            <h5>Adjustment Summary</h5>
                            <p>
                                <strong>Type:</strong> @Model.AdjustmentType<br>
                                <strong>Quantity Change:</strong>
                                @if (Model.AdjustmentType == "Increase")
                                {
                                    <text>+@Model.AdjustmentQuantity</text>
                                }
                                else
                                {
                                    <text>-@Model.AdjustmentQuantity</text>
                                }
                                <br>
                                @if (!string.IsNullOrEmpty(Model.AdjustmentPercentage))
                                {
                                    <text><strong>Percentage:</strong> @Model.AdjustmentPercentage</text>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reason and Remarks -->
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-comment"></i> Reason & Remarks</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label><strong>Reason:</strong></label>
                    <p>@Model.Reason</p>
                </div>
                @if (!string.IsNullOrEmpty(Model.Remarks))
                {
                    <div class="form-group">
                        <label><strong>Additional Remarks:</strong></label>
                        <p>@Model.Remarks</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.RejectionReason))
                {
                    <div class="alert alert-danger">
                        <h5><i class="icon fas fa-ban"></i> Rejection Reason</h5>
                        @Model.RejectionReason
                    </div>
                }
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card">
            <div class="card-body">
                <a asp-action="Index" class="btn btn-default">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                @if (Model.Status == "Pending" && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                {
                    <button type="button" class="btn btn-success" onclick="showApproveModal()">
                        <i class="fas fa-check"></i> Approve
                    </button>
                    <button type="button" class="btn btn-danger" onclick="showRejectModal()">
                        <i class="fas fa-times"></i> Reject
                    </button>
                }
            </div>
        </div>
    </div>
</section>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Approve" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header bg-success">
                    <h5 class="modal-title text-white">
                        <i class="fas fa-check-circle"></i> Approve Adjustment
                    </h5>
                    <button type="button" class="close text-white" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to approve adjustment <strong>@Model.AdjustmentNo</strong>?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> This will update the stock levels immediately.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header bg-danger">
                    <h5 class="modal-title text-white">
                        <i class="fas fa-times-circle"></i> Reject Adjustment
                    </h5>
                    <button type="button" class="close text-white" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Reject adjustment <strong>@Model.AdjustmentNo</strong>?</p>
                    <div class="form-group">
                        <label for="reason">Reason for Rejection <span class="text-danger">*</span></label>
                        <textarea name="reason" id="reason" class="form-control" rows="3"
                                  placeholder="Please provide a reason for rejection..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-ban"></i> Reject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showApproveModal() {
            $('#approveModal').modal('show');
        }

        function showRejectModal() {
            $('#rejectModal').modal('show');
        }
    </script>
}

@section Styles {
    <style>
        @@media print {
            .main-header, .main-sidebar, .content-header, .card-tools, .btn {
                display: none !important;
            }

            .card {
                border: 1px solid #000 !important;
            }
        }
    </style>
}
