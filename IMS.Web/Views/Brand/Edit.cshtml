@model IMS.Application.DTOs.BrandDto
@{
    ViewData["Title"] = "Edit Brand";
    var modelCount = Model.ModelCount;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-8">
                <h1 class="m-0">
                    <i class="fas fa-edit text-warning"></i>
                    Edit Brand
                </h1>
                <p class="mb-0 text-muted">
                    Modify brand information for: <strong>@Model.Name</strong>
                </p>
            </div>
            <div class="col-sm-4">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/" class="text-primary">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-primary">Brands</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Main Edit Form -->
            <div class="col-lg-8">
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-copyright"></i>
                            Brand Information
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-info">ID: @Model.Id</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" id="editBrandForm">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">
                                            <i class="fas fa-copyright text-primary"></i>
                                            Brand Name <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Name" class="form-control form-control-lg" maxlength="100" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                        <small class="form-text text-muted">Official brand name</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Code" class="control-label">
                                            <i class="fas fa-qrcode text-secondary"></i>
                                            Brand Code
                                        </label>
                                        <input asp-for="Code" class="form-control form-control-lg" maxlength="20" />
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                        <small class="form-text text-muted">Unique identifier for this brand</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label">
                                    <i class="fas fa-align-left text-success"></i>
                                    Brand Description
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="5"
                                          placeholder="Enter detailed description about this brand"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Provide comprehensive information about this brand
                                </small>
                            </div>

                            <div class="form-group mt-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-warning btn-lg" id="saveBtn">
                                            <i class="fas fa-save"></i>
                                            Update Brand
                                        </button>
                                        <button type="button" class="btn btn-info btn-lg ml-2" onclick="resetForm()">
                                            <i class="fas fa-undo"></i>
                                            Reset
                                        </button>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                                            <i class="fas fa-arrow-left"></i>
                                            Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Information Panel -->
            <div class="col-lg-4">
                <!-- Quick Stats -->
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-bar"></i>
                            Brand Statistics
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="fas fa-cog text-primary"></i>
                                    Item Models
                                </span>
                                <span class="badge badge-primary badge-pill">@modelCount</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="fas fa-calendar text-info"></i>
                                    Created Date
                                </span>
                                <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="fas fa-check-circle text-success"></i>
                                    Status
                                </span>
                                <span class="badge badge-success">Active</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Code))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fas fa-qrcode text-secondary"></i>
                                        Brand Code
                                    </span>
                                    <code class="badge badge-secondary">@Model.Code</code>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-bolt"></i>
                            Quick Actions
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <a asp-controller="ItemModel" asp-action="Index" asp-route-brandId="@Model.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-eye text-primary mr-3"></i>
                                    <div>
                                        <strong>View Models</strong>
                                        <br><small class="text-muted">Browse all models for this brand (@modelCount models)</small>
                                    </div>
                                </div>
                            </a>
                            <a asp-controller="ItemModel" asp-action="Create" asp-route-brandId="@Model.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-plus text-success mr-3"></i>
                                    <div>
                                        <strong>Add New Model</strong>
                                        <br><small class="text-muted">Create a new model for this brand</small>
                                    </div>
                                </div>
                            </a>
                            <a asp-controller="Item" asp-action="Index" asp-route-brandId="@Model.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-boxes text-info mr-3"></i>
                                    <div>
                                        <strong>View Brand Items</strong>
                                        <br><small class="text-muted">Browse all items from this brand</small>
                                    </div>
                                </div>
                            </a>
                            <a asp-controller="Item" asp-action="Create" asp-route-brandId="@Model.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-plus-circle text-warning mr-3"></i>
                                    <div>
                                        <strong>Add Brand Item</strong>
                                        <br><small class="text-muted">Create an item for this brand</small>
                                    </div>
                                </div>
                            </a>
                            @if (modelCount == 0)
                            {
                                <button type="button" class="list-group-item list-group-item-action text-danger"
                                        onclick="confirmDelete()">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-trash mr-3"></i>
                                        <div>
                                            <strong>Delete Brand</strong>
                                            <br><small class="text-muted">Remove this brand permanently</small>
                                        </div>
                                    </div>
                                </button>
                            }
                            else
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-info-circle text-warning mr-3"></i>
                                        <div>
                                            <strong>Cannot Delete</strong>
                                            <br><small class="text-muted">Brand has @modelCount models</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Brand Analytics -->
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-analytics"></i>
                            Brand Analytics
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="description-block border-right">
                                    <span class="description-percentage text-success">
                                        <i class="fas fa-caret-up"></i> Active
                                    </span>
                                    <h5 class="description-header">@modelCount</h5>
                                    <span class="description-text">MODELS</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="description-block">
                                    <span class="description-percentage text-info">
                                        <i class="fas fa-chart-line"></i> Growth
                                    </span>
                                    <h5 class="description-header">+@(modelCount * 2)</h5>
                                    <span class="description-text">ITEMS</span>
                                </div>
                            </div>
                        </div>

                        <div class="progress-group mt-3">
                            Model Coverage
                            <span class="float-right"><b>@modelCount</b>/50</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-success" style="width: @(Math.Min(100, (modelCount / 50.0) * 100))%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Help & Tips -->
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-lightbulb"></i>
                            Tips & Guidelines
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success mr-2"></i>
                                Keep brand name consistent
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success mr-2"></i>
                                Update description with new info
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success mr-2"></i>
                                Maintain unique brand codes
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success mr-2"></i>
                                Add models to organize items
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-warning text-warning mr-2"></i>
                                Changes affect all related items
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the brand "<strong>@Model.Name</strong>"?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    This action cannot be undone! All associated data will be affected.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete Brand
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Store original values for change detection
            var originalValues = {
                name: '@Html.Raw(Model.Name)',
                code: '@Html.Raw(Model.Code)',
                description: '@Html.Raw(Model.Description)'
            };

            // Form validation enhancement
            $('#editBrandForm').on('submit', function(e) {
                var isValid = true;
                var errorMessages = [];

                if (!$('#Name').val().trim()) {
                    errorMessages.push('Brand Name is required');
                    isValid = false;
                }

                if ($('#Name').val().trim().length < 2) {
                    errorMessages.push('Brand Name must be at least 2 characters long');
                    isValid = false;
                }

                var code = $('#Code').val().trim();
                if (code && code.length < 2) {
                    errorMessages.push('Brand Code must be at least 2 characters long');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    showValidationErrors(errorMessages);
                } else {
                    $('#saveBtn').prop('disabled', true)
                        .html('<i class="fas fa-spinner fa-spin"></i> Updating Brand...');
                }
            });

            // Track changes
            $('#editBrandForm input, #editBrandForm textarea').on('input', function() {
                checkForChanges();
            });

            // Live validation
            $('#Name').on('input blur', function() {
                validateField($(this), 'Brand name is required and must be at least 2 characters');
            });

            $('#Code').on('input blur', function() {
                var code = $(this).val().trim();
                if (code.length > 0 && code.length < 2) {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                } else if (code.length >= 2) {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                } else {
                    $(this).removeClass('is-valid is-invalid');
                }
            });
        });

        function resetForm() {
            if (confirm('Are you sure you want to reset all changes? This will restore the original values.')) {
                $('#Name').val('@Html.Raw(Model.Name)');
                $('#Code').val('@Html.Raw(Model.Code)');
                $('#Description').val('@Html.Raw(Model.Description)');

                $('.form-control').removeClass('is-valid is-invalid border-warning');
                $('.text-danger').text('');
                $('.alert-danger').remove();
                $('.card-header').removeClass('border-warning');
                $('#saveBtn').removeClass('btn-danger').addClass('btn-warning');

                showNotification('Form has been reset to original values', 'success');
            }
        }

        function checkForChanges() {
            var hasChanges =
                $('#Name').val() !== '@Html.Raw(Model.Name)' ||
                $('#Code').val() !== '@Html.Raw(Model.Code)' ||
                $('#Description').val() !== '@Html.Raw(Model.Description)';

            if (hasChanges) {
                $('.card-header').addClass('border-warning');
                $('#saveBtn').removeClass('btn-warning').addClass('btn-danger')
                    .html('<i class="fas fa-save"></i> Save Changes');
            } else {
                $('.card-header').removeClass('border-warning');
                $('#saveBtn').removeClass('btn-danger').addClass('btn-warning')
                    .html('<i class="fas fa-save"></i> Update Brand');
            }
        }

        function validateField(field, message) {
            var value = field.val().trim();
            var isValid = value.length >= 2;

            field.removeClass('is-valid is-invalid');
            field.addClass(isValid ? 'is-valid' : 'is-invalid');

            return isValid;
        }

        function showValidationErrors(errors) {
            $('.alert-danger').remove();

            var alertHtml = '<div class="alert alert-danger alert-dismissible fade show" role="alert">';
            alertHtml += '<h5><i class="icon fas fa-ban"></i> Validation Errors!</h5>';
            alertHtml += '<ul class="mb-0">';
            errors.forEach(function(error) {
                alertHtml += '<li>' + error + '</li>';
            });
            alertHtml += '</ul>';
            alertHtml += '<button type="button" class="close" data-dismiss="alert">';
            alertHtml += '<span aria-hidden="true">&times;</span></button></div>';

            $('.card-body').prepend(alertHtml);
            $('.card-body').animate({scrollTop: 0}, 300);
        }

        function showNotification(message, type = 'info') {
            if (typeof toastr !== 'undefined') {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "3000"
                };
                toastr[type](message);
            }
        }

        function confirmDelete() {
            $('#deleteModal').modal('show');
        }

        // Warn about unsaved changes
        window.addEventListener('beforeunload', function(e) {
            var hasChanges =
                $('#Name').val() !== '@Html.Raw(Model.Name)' ||
                $('#Code').val() !== '@Html.Raw(Model.Code)' ||
                $('#Description').val() !== '@Html.Raw(Model.Description)';

            if (hasChanges) {
                e.preventDefault();
                e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
                return e.returnValue;
            }
        });

        // Remove warning on form submit
        $('#editBrandForm').on('submit', function() {
            window.removeEventListener('beforeunload', arguments.callee);
        });
    </script>

    <style>
        .form-control-lg {
            font-size: 1.1rem;
            font-weight: 500;
        }

        .card-outline {
            border-top: 3px solid;
        }

        .border-warning {
            border-color: #ffc107 !important;
            animation: pulse-warning 2s infinite;
        }

        @@keyframes pulse-warning {
            0%

        {
            box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.7);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(255, 193, 7, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(255, 193, 7, 0);
        }

        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .list-group-item-action:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
            transition: all 0.2s;
        }

        .description-block {
            padding: 15px;
        }

        .description-header {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 5px 0;
        }

        .description-text {
            font-size: 0.8rem;
            color: #6c757d;
            text-transform: uppercase;
            font-weight: 600;
        }

        .progress-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .content-header h1 {
            font-size: 1.8rem;
            font-weight: 600;
        }

        .is-valid {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

        .is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
    </style>
}