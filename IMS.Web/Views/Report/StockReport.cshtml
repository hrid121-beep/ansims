@model IMS.Application.DTOs.StockReportDto
@{
    ViewData["Title"] = "Stock Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Stock Report</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Reports</a></li>
                    <li class="breadcrumb-item active">Stock Report</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Filter Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h3 class="card-title"><i class="fas fa-filter"></i> <strong>Advanced Filter Options</strong></h3>
                <div class="card-tools">
                    <span class="badge badge-info mr-2">Real-time Filtering</span>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="StockReport" method="get" id="filterForm">
                    <div class="row">
                        <!-- Store Filter -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-warehouse"></i> Store:</label>
                                <select id="storeId" name="storeId" asp-items="ViewBag.Stores" class="form-control select2">
                                </select>
                            </div>
                        </div>

                        <!-- Category Filter -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-tags"></i> Category:</label>
                                <select id="categoryId" name="categoryId" asp-items="ViewBag.Categories" class="form-control select2">
                                </select>
                            </div>
                        </div>

                        <!-- Stock Status Filter -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-chart-line"></i> Stock Status:</label>
                                <select id="stockStatus" name="stockStatus" class="form-control">
                                    <option value="">All Status</option>
                                    <option value="InStock">In Stock</option>
                                    <option value="LowStock">Low Stock</option>
                                    <option value="OutOfStock">Out of Stock</option>
                                </select>
                            </div>
                        </div>

                        <!-- Sort By -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-sort"></i> Sort By:</label>
                                <select id="sortBy" name="sortBy" class="form-control">
                                    <option value="Name">Item Name</option>
                                    <option value="Code">Item Code</option>
                                    <option value="Value">Total Value (High to Low)</option>
                                    <option value="Quantity">Current Stock (High to Low)</option>
                                    <option value="Category">Category</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Search Item -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label><i class="fas fa-search"></i> Search Item (Name/Code):</label>
                                <input type="text" id="searchTerm" name="searchTerm" class="form-control"
                                       placeholder="Enter item name or code..." />
                            </div>
                        </div>

                        <!-- Min Stock Threshold -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-less-than-equal"></i> Min. Stock ≥:</label>
                                <input type="number" id="minStock" name="minStock" class="form-control"
                                       placeholder="Minimum quantity" step="0.01" />
                            </div>
                        </div>

                        <!-- Max Stock Threshold -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-greater-than-equal"></i> Max. Stock ≤:</label>
                                <input type="number" id="maxStock" name="maxStock" class="form-control"
                                       placeholder="Maximum quantity" step="0.01" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Min Value -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-dollar-sign"></i> Min. Value (৳):</label>
                                <input type="number" id="minValue" name="minValue" class="form-control"
                                       placeholder="Minimum value" step="0.01" />
                            </div>
                        </div>

                        <!-- Max Value -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><i class="fas fa-dollar-sign"></i> Max. Value (৳):</label>
                                <input type="number" id="maxValue" name="maxValue" class="form-control"
                                       placeholder="Maximum value" step="0.01" />
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-filter"></i> Apply Filters
                                </button>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-secondary btn-block" onclick="clearFilters()">
                                    <i class="fas fa-redo"></i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="info-box bg-info">
                    <span class="info-box-icon"><i class="fas fa-boxes"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Items</span>
                        <span class="info-box-number">@Model.TotalItems</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%"></div>
                        </div>
                        <span class="progress-description">
                            Total Unique Items
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="info-box bg-success">
                    <span class="info-box-icon"><i class="fas fa-dollar-sign"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Inventory Value</span>
                        <span class="info-box-number">৳@($"{Model.TotalValue:N2}")</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%"></div>
                        </div>
                        <span class="progress-description">
                            Current Stock Value
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="info-box bg-warning">
                    <span class="info-box-icon"><i class="fas fa-exclamation-triangle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Low Stock Items</span>
                        <span class="info-box-number">@Model.LowStockItems</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                            Needs Restocking
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="info-box bg-danger">
                    <span class="info-box-icon"><i class="fas fa-times-circle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Out of Stock</span>
                        <span class="info-box-number">@Model.OutOfStockItems</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%"></div>
                        </div>
                        <span class="progress-description">
                            Urgent Action Required
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Stock Status Distribution</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="stockStatusChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Top 10 Items by Value</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="topItemsChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Stock Table -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Stock Details</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-success btn-sm" onclick="exportToExcel()">
                        <i class="fas fa-download"></i> Export Excel
                    </button>
                    <button type="button" class="btn btn-danger btn-sm" onclick="exportToPDF()">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover" id="stockTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 50px;">#</th>
                            <th>Item Code</th>
                            <th>Item Name</th>
                            <th>Category</th>
                            <th>Store</th>
                            <th class="text-right" data-type="num">Current Stock</th>
                            <th class="text-right" data-type="num">Min. Stock</th>
                            <th>Unit</th>
                            <th class="text-right" data-type="num-fmt">Unit Price</th>
                            <th class="text-right" data-type="num-fmt">Total Value</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.StockItems != null && Model.StockItems.Any())
                        {
                            var serialNo = 1;
                            @foreach (var item in Model.StockItems.OrderBy(x => x.ItemName))
                            {
                                <tr class="@(item.CurrentStock == 0 ? "table-danger" : item.CurrentStock < item.MinimumStock ? "table-warning" : "")">
                                    <td class="text-center">@serialNo</td>
                                    <td><strong>@item.ItemCode</strong></td>
                                    <td>@item.ItemName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.StoreName</td>
                                    <td class="text-right">@((item.CurrentStock % 1 == 0) ? $"{item.CurrentStock:N0}" : $"{item.CurrentStock:N2}")</td>
                                    <td class="text-right">@((item.MinimumStock % 1 == 0) ? $"{item.MinimumStock:N0}" : $"{item.MinimumStock:N2}")</td>
                                    <td>@item.Unit</td>
                                    <td class="text-right">৳@($"{item.UnitPrice:N2}")</td>
                                    <td class="text-right">৳@($"{item.TotalValue:N2}")</td>
                                    <td>
                                        @if (item.CurrentStock == 0)
                                        {
                                            <span class="badge badge-danger">Out of Stock</span>
                                        }
                                        else if (item.CurrentStock < item.MinimumStock)
                                        {
                                            <span class="badge badge-warning">Low Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">In Stock</span>
                                        }
                                    </td>
                                </tr>
                                serialNo++; }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center">No stock data available</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="bg-light font-weight-bold">
                            <td colspan="9" class="text-right">Total:</td>
                            <td class="text-right">৳@($"{Model.TotalValue:N2}")</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/adminlte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" />
}

@section Scripts {
    <script src="~/adminlte/plugins/chart.js/Chart.min.js"></script>
    <script src="~/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4'
            });

            // Initialize DataTable with advanced filtering
            var table = $('#stockTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "order": [[1, "asc"]], // Sort by Item Name by default
                "language": {
                    "search": "Quick Search:",
                    "lengthMenu": "Show _MENU_ items per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ items",
                    "infoEmpty": "No items available",
                    "infoFiltered": "(filtered from _MAX_ total items)"
                }
            });

            // Apply filter when form inputs change
            $('#storeId, #categoryId, #stockStatus, #sortBy').on('change', function() {
                applyAdvancedFilters();
            });

            $('#searchTerm, #minStock, #maxStock, #minValue, #maxValue').on('keyup change', function() {
                applyAdvancedFilters();
            });

            function applyAdvancedFilters() {
                var searchTerm = $('#searchTerm').val().toLowerCase();
                var stockStatus = $('#stockStatus').val();
                var minStock = parseFloat($('#minStock').val()) || -Infinity;
                var maxStock = parseFloat($('#maxStock').val()) || Infinity;
                var minValue = parseFloat($('#minValue').val()) || -Infinity;
                var maxValue = parseFloat($('#maxValue').val()) || Infinity;

                // Custom filter function
                $.fn.dataTable.ext.search.push(
                    function(settings, data, dataIndex) {
                        if (settings.nTable.id !== 'stockTable') {
                            return true;
                        }

                        // Extract values from table row
                        var itemCode = data[0].toLowerCase();
                        var itemName = data[1].toLowerCase();
                        var category = data[2];
                        var store = data[3];
                        var currentStock = parseFloat(data[4].replace(/,/g, '')) || 0;
                        var minStockVal = parseFloat(data[5].replace(/,/g, '')) || 0;
                        var unitPrice = parseFloat(data[7].replace(/[৳,]/g, '')) || 0;
                        var totalValue = parseFloat(data[8].replace(/[৳,]/g, '')) || 0;
                        var status = data[9];

                        // Search term filter (Item Code or Name)
                        if (searchTerm && !(itemCode.includes(searchTerm) || itemName.includes(searchTerm))) {
                            return false;
                        }

                        // Stock status filter
                        if (stockStatus) {
                            if (stockStatus === 'OutOfStock' && !status.includes('Out of Stock')) {
                                return false;
                            }
                            if (stockStatus === 'LowStock' && !status.includes('Low Stock')) {
                                return false;
                            }
                            if (stockStatus === 'InStock' && !status.includes('In Stock')) {
                                return false;
                            }
                        }

                        // Stock quantity range filter
                        if (currentStock < minStock || currentStock > maxStock) {
                            return false;
                        }

                        // Value range filter
                        if (totalValue < minValue || totalValue > maxValue) {
                            return false;
                        }

                        return true;
                    }
                );

                table.draw();
                $.fn.dataTable.ext.search.pop(); // Remove custom filter after drawing
            }

            // Sort By functionality
            $('#sortBy').on('change', function() {
                var sortValue = $(this).val();
                switch(sortValue) {
                    case 'Name':
                        table.order([[1, 'asc']]).draw();
                        break;
                    case 'Code':
                        table.order([[0, 'asc']]).draw();
                        break;
                    case 'Value':
                        table.order([[8, 'desc']]).draw();
                        break;
                    case 'Quantity':
                        table.order([[4, 'desc']]).draw();
                        break;
                    case 'Category':
                        table.order([[2, 'asc']]).draw();
                        break;
                }
            });

            // Stock Status Pie Chart
            var stockStatusData = {
                labels: ['In Stock', 'Low Stock', 'Out of Stock'],
                datasets: [{
                    data: [
                        @(Model.TotalItems - Model.LowStockItems - Model.OutOfStockItems),
                        @Model.LowStockItems,
                        @Model.OutOfStockItems
                    ],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
                    borderWidth: 0
                }]
            };

            var stockStatusOptions = {
                maintainAspectRatio: false,
                responsive: true,
                legend: {
                    display: true,
                    position: 'bottom'
                },
                tooltips: {
                    callbacks: {
                        label: function(tooltipItem, data) {
                            var dataset = data.datasets[tooltipItem.datasetIndex];
                            var total = dataset.data.reduce(function(previousValue, currentValue) {
                                return previousValue + currentValue;
                            });
                            var currentValue = dataset.data[tooltipItem.index];
                            var percentage = Math.floor(((currentValue/total) * 100)+0.5);
                            return data.labels[tooltipItem.index] + ': ' + currentValue + ' (' + percentage + '%)';
                        }
                    }
                }
            };

            var stockStatusChartCanvas = $('#stockStatusChart').get(0).getContext('2d');
            new Chart(stockStatusChartCanvas, {
                type: 'doughnut',
                data: stockStatusData,
                options: stockStatusOptions
            });

            // Top Items by Value Bar Chart
            @{
                    var topItems = Model.StockItems
                            .Where(x => x.TotalValue > 0)
                            .OrderByDescending(x => x.TotalValue)
                            .Take(10)
                            .ToList();
            }

            var topItemsData = {
                labels: [@Html.Raw(string.Join(",", topItems.Select(x => $"'{x.ItemName}'")))],
                datasets: [{
                    label: 'Value (৳)',
                    data: [@string.Join(",", topItems.Select(x => $"{x.TotalValue:F2}"))],
                    backgroundColor: 'rgba(60,141,188,0.9)',
                    borderColor: 'rgba(60,141,188,0.8)',
                    borderWidth: 1
                }]
            };

            var topItemsOptions = {
                maintainAspectRatio: false,
                responsive: true,
                legend: {
                    display: false
                },
                scales: {
                    xAxes: [{
                        ticks: {
                            callback: function(value) {
                                if (value.length > 15) {
                                    return value.substr(0, 15) + '...';
                                }
                                return value;
                            }
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            callback: function(value) {
                                var num = parseFloat(value);
                                var formatted = (num % 1 === 0) ? num.toFixed(0) : num.toFixed(2);
                                return '৳ ' + formatted.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                            }
                        }
                    }]
                }
            };

            var topItemsChartCanvas = $('#topItemsChart').get(0).getContext('2d');
            new Chart(topItemsChartCanvas, {
                type: 'bar',
                data: topItemsData,
                options: topItemsOptions
            });

        });

        // Print function
        function printReport() {
            window.print();
        }

        // Export to Excel
        function exportToExcel() {
            var storeId = document.getElementById('storeId').value;
            var categoryId = document.getElementById('categoryId').value;

            var url = '@Url.Action("ExportStockReport", "Report")' + '?';

            if (storeId) {
                url += 'storeId=' + storeId;
            }

            if (categoryId) {
                if (storeId) url += '&';
                url += 'categoryId=' + categoryId;
            }

            window.location.href = url;
        }

        // Export to PDF
        function exportToPDF() {
            var storeId = document.getElementById('storeId').value;
            var categoryId = document.getElementById('categoryId').value;

            var url = '@Url.Action("ExportStockReportPdf", "Report")' + '?';

            if (storeId) {
                url += 'storeId=' + storeId;
            }

            if (categoryId) {
                if (storeId) url += '&';
                url += 'categoryId=' + categoryId;
            }

            window.location.href = url;
        }

        // Clear all filters
        function clearFilters() {
            $('#filterForm')[0].reset();
            $('.select2').val('').trigger('change');
            window.location.href = '@Url.Action("StockReport", "Report")';
        }
    </script>

    <!-- Print Styles -->
    <style>
        @@media print {
            .main-sidebar, .main-header, .main-footer {
                display: none !important;
            }

            .content-wrapper {
                margin-left: 0 !important;
            }

            .card-tools, #tableSearch, form {
                display: none !important;
            }
        }
    </style>
}