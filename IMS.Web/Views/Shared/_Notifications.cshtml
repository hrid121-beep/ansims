@* Display TempData Notifications *@
@if (TempData["Success"] != null)
{
    <script>
        $(document).ready(function() {
            console.log('Showing success message:', '@Html.Raw(TempData["Success"].ToString().Replace("'", "\\'"))');
            console.log('Toastr loaded:', typeof toastr !== 'undefined');
            toastr.success('@Html.Raw(TempData["Success"].ToString().Replace("'", "\\'"))');
        });
    </script>
}
