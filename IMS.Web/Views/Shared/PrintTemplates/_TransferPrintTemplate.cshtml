@model IMS.Application.DTOs.TransferDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Transfer Document - @Model.TransferNo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            margin: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header h1 {
            margin: 0;
            font-size: 24pt;
        }
        .header h2 {
            margin: 5px 0;
            font-size: 18pt;
            color: #666;
        }
        .info-section {
            margin-bottom: 20px;
        }
        .info-grid {
            display: table;
            width: 100%;
            margin-bottom: 20px;
        }
        .info-row {
            display: table-row;
        }
        .info-label {
            display: table-cell;
            width: 150px;
            padding: 5px;
            font-weight: bold;
        }
        .info-value {
            display: table-cell;
            padding: 5px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .footer {
            margin-top: 50px;
        }
        .signature-section {
            display: flex;
            justify-content: space-between;
            margin-top: 100px;
        }
        .signature-box {
            text-align: center;
            width: 200px;
        }
        .signature-line {
            border-top: 1px solid #000;
            margin-top: 60px;
        }
        @@media print {
            body {
                margin: 0;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ANSAR & VDP</h1>
        <h2>STOCK TRANSFER DOCUMENT</h2>
        <p>Transfer No: <strong>@Model.TransferNo</strong></p>
    </div>

    <div class="info-section">
        <div class="info-grid">
            <div class="info-row">
                <div class="info-label">Transfer Date:</div>
                <div class="info-value">@Model.TransferDate.ToString("dd-MMM-yyyy")</div>
            </div>
            <div class="info-row">
                <div class="info-label">From Store:</div>
                <div class="info-value">@Model.FromStoreName</div>
            </div>
            <div class="info-row">
                <div class="info-label">To Store:</div>
                <div class="info-value">@Model.ToStoreName</div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Remarks))
            {
                <div class="info-row">
                    <div class="info-label">Remarks:</div>
                    <div class="info-value">@Model.Remarks</div>
                </div>
            }
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 50px">S/N</th>
                <th>Item Description</th>
                <th style="width: 100px">Quantity</th>
                <th style="width: 80px">Unit</th>
            </tr>
        </thead>
        <tbody>
            @{
                var serialNo = 1;
            }
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@serialNo</td>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>pcs</td>
                </tr>
                serialNo++;
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Total</th>
                <th>@Model.Items.Sum(i => i.Quantity)</th>
                <th>pcs</th>
            </tr>
        </tfoot>
    </table>

    <div class="signature-section">
        <div class="signature-box">
            <div class="signature-line"></div>
            <p>Transferred By<br>(@Model.CreatedBy)</p>
        </div>
        <div class="signature-box">
            <div class="signature-line"></div>
            <p>Received By<br>(Name & Signature)</p>
        </div>
        <div class="signature-box">
            <div class="signature-line"></div>
            <p>Authorized By<br>(Store Manager)</p>
        </div>
    </div>

    <div class="footer">
        <p>Printed on: @DateTime.Now.ToString("dd-MMM-yyyy HH:mm")</p>
    </div>

    <script>
        window.onload = function() {
            window.print();
        }
    </script>
</body>
</html>
