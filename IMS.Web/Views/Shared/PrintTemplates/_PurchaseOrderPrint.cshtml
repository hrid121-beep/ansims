@model IMS.Application.DTOs.PurchaseDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Purchase Order - @Model.PurchaseOrderNo</title>
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                margin: 0;
                font-size: 12pt;
            }

            .invoice {
                margin: 0;
            }
        }

        .invoice {
            background: white;
            padding: 20px;
        }

        table {
            width: 100%;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body onload="window.print();">
    <div class="invoice">
        <!-- Header -->
        <div class="row">
            <div class="col-12 text-center">
                <h2>BANGLADESH ANSAR & VDP</h2>
                <h3>PURCHASE ORDER</h3>
            </div>
        </div>

        <!-- Info Section -->
        <div class="row" style="margin-top: 30px;">
            <div class="col-6">
                <strong>To:</strong><br>
                @if (!Model.IsMarketplacePurchase)
                {
                    @Model.VendorName
                
                    <br>
                    @Model.VendorAddress
                }
                else
                {
                    <text>Marketplace Purchase</text>
                }
            </div>
            <div class="col-6 text-right">
                <strong>PO Number:</strong> @Model.PurchaseOrderNo<br>
                <strong>Date:</strong> @Model.PurchaseDate.ToString("dd/MM/yyyy")<br>
                <strong>Delivery Date:</strong> @(Model.ExpectedDeliveryDate?.ToString("dd/MM/yyyy") ?? "TBD")
            </div>
        </div>

        <!-- Items Table -->
        <table class="table table-bordered" style="margin-top: 30px;">
            <thead>
                <tr>
                    <th>SL</th>
                    <th>Item Description</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sl = 1;
                }
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@sl</td>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>৳@item.UnitPrice.ToString("N2")</td>
                        <td>৳@item.TotalPrice.ToString("N2")</td>
                    </tr>
                    sl++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="4" class="text-right">Total Amount:</th>
                    <th>৳@Model.TotalAmount.ToString("N2")</th>
                </tr>
            </tfoot>
        </table>

        <!-- Terms -->
        <div style="margin-top: 30px;">
            <strong>Terms & Conditions:</strong>
            <ol>
                <li>Delivery must be made by the specified date</li>
                <li>All items must meet quality standards</li>
                <li>Payment will be processed after inspection</li>
            </ol>
        </div>

        <!-- Signatures -->
        <div class="row" style="margin-top: 50px;">
            <div class="col-4 text-center">
                <hr>
                Prepared By
            </div>
            <div class="col-4 text-center">
                <hr>
                Checked By
            </div>
            <div class="col-4 text-center">
                <hr>
                Approved By
            </div>
        </div>
    </div>
</body>
</html>
