@model IEnumerable<IMS.Application.DTOs.ReceiveDto>
@{
    ViewData["Title"] = "Deleted Receives";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-trash-restore"></i> Deleted Receives</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Receives</a></li>
                    <li class="breadcrumb-item active">Deleted</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5><i class="fas fa-info-circle"></i> Note:</h5>
                    <p>These receives have been soft deleted. You can restore them if needed. Only non-completed receives can be deleted.</p>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Deleted Receives (@Model.Count())</h3>
                <div class="card-tools">
                    <a asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Active Receives
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="deletedReceivesTable">
                            <thead>
                                <tr>
                                    <th>Receive No</th>
                                    <th>Receive Date</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Original Issue</th>
                                    <th>Store</th>
                                    <th>Received By</th>
                                    <th>Deleted At</th>
                                    <th>Deleted By</th>
                                    <th width="120">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var receive in Model)
                                {
                                    <tr>
                                        <td><strong>@receive.ReceiveNo</strong></td>
                                        <td>@receive.ReceiveDate.ToString("dd-MMM-yyyy")</td>
                                        <td>
                                            @if (receive.ReceiveType == "Issue")
                                            {
                                                <span class="badge badge-info">Issue</span>
                                            }
                                            else if (receive.ReceiveType == "Purchase")
                                            {
                                                <span class="badge badge-success">Purchase</span>
                                            }
                                            else if (receive.ReceiveType == "Transfer")
                                            {
                                                <span class="badge badge-warning">Transfer</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@receive.ReceiveType</span>
                                            }
                                        </td>
                                        <td>
                                            @if (receive.Status == "Completed")
                                            {
                                                <span class="badge badge-success">Completed</span>
                                            }
                                            else if (receive.Status == "Pending")
                                            {
                                                <span class="badge badge-warning">Pending</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@receive.Status</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(receive.OriginalIssueNo))
                                            {
                                                <span class="badge badge-primary">@receive.OriginalIssueNo</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>@(receive.StoreName ?? "N/A")</td>
                                        <td>@receive.ReceivedBy</td>
                                        <td>
                                            @if (receive.UpdatedAt.HasValue)
                                            {
                                                @receive.UpdatedAt.Value.ToString("dd-MMM-yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>@receive.UpdatedBy</td>
                                        <td>
                                            <form asp-action="Restore" method="post" style="display:inline;"
                                                  onsubmit="return confirm('Are you sure you want to restore this receive?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@receive.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Restore">
                                                    <i class="fas fa-undo"></i> Restore
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No deleted receives found.
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deletedReceivesTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "pageLength": 25,
                "order": [[7, "desc"]], // Sort by deleted date descending
                "buttons": ["copy", "csv", "excel", "pdf", "print"]
            }).buttons().container().appendTo('#deletedReceivesTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
