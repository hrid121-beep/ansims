@model IMS.Application.DTOs.QuickReceiveDto
@{
    ViewData["Title"] = "Quick Receive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quick Receive</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Receives</a></li>
                    <li class="breadcrumb-item active">Quick Receive</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Quick Receive Form</h3>
                    </div>
                    <form asp-action="QuickReceive" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Receive No</label>
                                <input asp-for="ReceiveNo" class="form-control" readonly value="@ViewBag.ReceiveNo" />
                            </div>

                            <div class="form-group">
                                <label>Receive Date</label>
                                <input asp-for="ReceiveDate" type="date" class="form-control" />
                                <span asp-validation-for="ReceiveDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Receive Type</label>
                                <select asp-for="ReceiveType" asp-items="ViewBag.ReceiveTypes" class="form-control">
                                    <option value="">Select Type</option>
                                </select>
                                <span asp-validation-for="ReceiveType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Received From (Name)</label>
                                <input asp-for="ReceivedFromName" class="form-control" />
                                <span asp-validation-for="ReceivedFromName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Badge No (if applicable)</label>
                                <input asp-for="BadgeNo" class="form-control" />
                            </div>

                            <hr />

                            <div class="form-group">
                                <label>Item</label>
                                <select asp-for="ItemId" asp-items="ViewBag.Items" class="form-control" id="itemSelect">
                                    <option value="">Select Item</option>
                                </select>
                                <span asp-validation-for="ItemId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Store</label>
                                <select asp-for="StoreId" asp-items="ViewBag.Stores" class="form-control">
                                    <option value="">Select Store</option>
                                </select>
                                <span asp-validation-for="StoreId" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Quantity</label>
                                        <input asp-for="Quantity" type="number" class="form-control" min="1" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Condition</label>
                                        <select asp-for="Condition" asp-items="ViewBag.Conditions" class="form-control">
                                            <option value="Good">Good</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Remarks</label>
                                <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Complete Quick Receive
                            </button>
                            <a asp-action="Index" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $('#itemSelect').change(function() {
            const itemId = $(this).val();
            if (itemId) {
                $.get(`/Receive/GetItemDetails/${itemId}`, function(data) {
                    if (data.success) {
                        // Can display item details if needed
                    }
                });
            }
        });
    </script>
}