@model IMS.Application.DTOs.ZilaDto
@{
    ViewData["Title"] = "Edit District";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit District - @Model.Name</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Districts</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Edit District Information</h3>
                    </div>
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />

                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Code" class="control-label"></label>
                                        <input asp-for="Code" class="form-control" readonly />
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RangeId" class="control-label">Range <span class="text-danger">*</span></label>
                                        <select asp-for="RangeId" class="form-control select2" asp-items="ViewBag.Ranges">
                                            <option value="">Select Range</option>
                                        </select>
                                        <span asp-validation-for="RangeId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Rest of the form fields same as Create view -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label">Name (English) <span class="text-danger">*</span></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="NameBangla" class="control-label">Name (Bengali)</label>
                                        <input asp-for="NameBangla" class="form-control" />
                                        <span asp-validation-for="NameBangla" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Division" class="control-label">Division</label>
                                        <select asp-for="Division" class="form-control select2" asp-items="ViewBag.Divisions">
                                            <option value="">Select Division</option>
                                        </select>
                                        <span asp-validation-for="Division" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="IsActive" class="control-label">Status</label>
                                        <select asp-for="IsActive" class="form-control">
                                            <option value="true">Active</option>
                                            <option value="false">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DistrictOfficerName" class="control-label"></label>
                                        <input asp-for="DistrictOfficerName" class="form-control" />
                                        <span asp-validation-for="DistrictOfficerName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ContactNumber" class="control-label"></label>
                                        <input asp-for="ContactNumber" class="form-control" />
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="OfficeAddress" class="control-label"></label>
                                <textarea asp-for="OfficeAddress" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="OfficeAddress" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Area" class="control-label">Area (km²)</label>
                                        <input asp-for="Area" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="Area" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Population" class="control-label"></label>
                                        <input asp-for="Population" class="form-control" type="number" min="0" />
                                        <span asp-validation-for="Population" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label"></label>
                                <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update District
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Audit Information -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Audit Information</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Created By:</dt>
                            <dd class="col-sm-8">@Model.CreatedBy</dd>

                            @if (Model.UpdatedAt.HasValue)
                            {
                                <dt class="col-sm-4">Updated:</dt>
                                <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd MMM yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Updated By:</dt>
                                <dd class="col-sm-8">@Model.UpdatedBy</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('.select2').select2({
                theme: 'bootstrap4'
            });
        });
    </script>
}
