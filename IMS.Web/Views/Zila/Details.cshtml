@model IMS.Application.DTOs.ZilaDto
@{
    ViewData["Title"] = "District Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var upazilas = ViewBag.Upazilas as IEnumerable<IMS.Application.DTOs.UpazilaDto>;
    var stores = ViewBag.Stores as IEnumerable<IMS.Application.DTOs.StoreDto>;
    var vdpMemberCount = ViewBag.VDPMemberCount as int? ?? 0;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">District Details - @Model.Name</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Districts</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- District Info -->
            <div class="col-md-4">
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <i class="fas fa-map fa-5x text-primary mb-3"></i>
                        </div>
                        <h3 class="profile-username text-center">@Model.Name</h3>
                        <p class="text-muted text-center">@Model.NameBangla</p>
                        <p class="text-center text-muted">@Model.Code</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Range</b>
                                <a asp-controller="Range" asp-action="Details" asp-route-id="@Model.RangeId" class="float-right">
                                    @Model.RangeName
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Division</b> <a class="float-right">@Model.Division</a>
                            </li>
                            <li class="list-group-item">
                                <b>District Officer</b> <a class="float-right">@(Model.DistrictOfficerName ?? "Not Assigned")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Contact</b> <a class="float-right">@(Model.ContactNumber ?? "N/A")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b> <a class="float-right text-truncate" style="max-width: 150px;">@(Model.Email ?? "N/A")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Area</b> <a class="float-right">@(Model.Area?.ToString("N2") ?? "N/A") km²</a>
                            </li>
                            <li class="list-group-item">
                                <b>Population</b> <a class="float-right">@(Model.Population?.ToString("N0") ?? "N/A")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Status</b>
                                <a class="float-right">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactive</span>
                                    }
                                </a>
                            </li>
                        </ul>

                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>

                <!-- Contact Card -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Contact Information</h3>
                    </div>
                    <div class="card-body">
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Office Address</strong>
                        <p class="text-muted">@(Model.OfficeAddress ?? "Not Available")</p>

                        @if (!string.IsNullOrEmpty(Model.Remarks))
                        {
                            <hr>
                            <strong><i class="fas fa-file-alt mr-1"></i> Remarks</strong>
                            <p class="text-muted">@Model.Remarks</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Statistics and Lists -->
            <div class="col-md-8">
                <!-- Quick Stats -->
                <div class="row">
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3>@Model.UpazilaCount</h3>
                                <p>Upazilas</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-building"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>@Model.StoreCount</h3>
                                <p>Stores</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-warehouse"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>@vdpMemberCount</h3>
                                <p>VDP Members</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-6">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3>@(upazilas?.Count(u => u.IsActive) ?? 0)</h3>
                                <p>Active Upazilas</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upazilas List -->
                @if (upazilas != null && upazilas.Any())
                {
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Upazilas in @Model.Name</h3>
                            <div class="card-tools">
                                <a asp-controller="Upazila" asp-action="Create" asp-route-zilaId="@Model.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-plus"></i> Add Upazila
                                </a>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Officer</th>
                                        <th>VDP Unit</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var upazila in upazilas)
                                    {
                                        <tr>
                                            <td>@upazila.Code</td>
                                            <td>@upazila.Name</td>
                                            <td>@(upazila.UpazilaOfficerName ?? "Not Assigned")</td>
                                            <td>
                                                @if (upazila.HasVDPUnit)
                                                {
                                                    <span class="badge badge-success">Yes (@upazila.VDPMemberCount)</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (upazila.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Upazila" asp-action="Details" asp-route-id="@upazila.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <!-- Recent Activity -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Recent Activity</h3>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="time-label">
                                <span class="bg-primary">@DateTime.Now.ToString("dd MMM yyyy")</span>
                            </div>
                            <div>
                                <i class="fas fa-info bg-blue"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i> @Model.CreatedAt.ToString("dd MMM yyyy")</span>
                                    <h3 class="timeline-header">District Created</h3>
                                    <div class="timeline-body">
                                        District was created by @Model.CreatedBy
                                    </div>
                                </div>
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div>
                                    <i class="fas fa-edit bg-yellow"></i>
                                    <div class="timeline-item">
                                        <span class="time"><i class="fas fa-clock"></i> @Model.UpdatedAt.Value.ToString("dd MMM yyyy")</span>
                                        <h3 class="timeline-header">Last Updated</h3>
                                        <div class="timeline-body">
                                            Updated by @Model.UpdatedBy
                                        </div>
                                    </div>
                                </div>
                            }
                            <div>
                                <i class="fas fa-clock bg-gray"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}