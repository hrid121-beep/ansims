@model IEnumerable<IMS.Application.DTOs.ZilaDto>
@{
    ViewData["Title"] = "Districts (Zila)";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var division = ViewBag.Division as string;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Districts (Zila) @(!string.IsNullOrEmpty(division) ? $"- {division}" : "")</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Districts</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Summary Cards -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Count()</h3>
                        <p>Total Districts</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-map"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Count(z => z.IsActive)</h3>
                        <p>Active Districts</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Sum(z => z.UpazilaCount)</h3>
                        <p>Total Upazilas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.Sum(z => z.StoreCount)</h3>
                        <p>Total Stores</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Table Card -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">District List</h3>
                        <div class="card-tools">
                            <div class="btn-group">
                                <a asp-action="Create" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Add District
                                </a>
                                <a asp-action="Import" class="btn btn-success btn-sm">
                                    <i class="fas fa-file-import"></i> Import CSV
                                </a>
                                <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown">
                                    <i class="fas fa-download"></i> Export
                                </button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#" id="exportCsvBtn">
                                        <i class="fas fa-file-csv text-success"></i> Export to CSV
                                    </a>
                                    <a class="dropdown-item" href="#" id="exportPdfBtn">
                                        <i class="fas fa-file-pdf text-danger"></i> Export to PDF
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Filters -->
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <select id="divisionFilter" class="form-control">
                                    <option value="">All Divisions</option>
                                    <option value="Dhaka Division">Dhaka Division</option>
                                    <option value="Chittagong Division">Chittagong Division</option>
                                    <option value="Rajshahi Division">Rajshahi Division</option>
                                    <option value="Khulna Division">Khulna Division</option>
                                    <option value="Barisal Division">Barisal Division</option>
                                    <option value="Sylhet Division">Sylhet Division</option>
                                    <option value="Rangpur Division">Rangpur Division</option>
                                    <option value="Mymensingh Division">Mymensingh Division</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select id="rangeFilter" class="form-control select2">
                                    <option value="">All Ranges</option>
                                    @{
                                        var rangeSelectList = ViewBag.Ranges as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
                                    }
                                    @if (rangeSelectList != null)
                                    {
                                        @foreach (var range in rangeSelectList)
                                        {
                                            <option value="@range.Value">@range.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select id="statusFilter" class="form-control">
                                    <option value="">All Status</option>
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <!-- Data Table -->
                        <table id="zilaTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Name (English)</th>
                                    <th>Name (Bengali)</th>
                                    <th>Range</th>
                                    <th>Division</th>
                                    <th>District Officer</th>
                                    <th>Upazilas</th>
                                    <th>Stores</th>
                                    <th>Status</th>
                                    <th width="120">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var zila in Model)
                                {
                                    <tr>
                                        <td>@zila.Code</td>
                                        <td>@zila.Name</td>
                                        <td>@zila.NameBangla</td>
                                        <td>
                                            <a asp-controller="Range" asp-action="Details" asp-route-id="@zila.RangeId">
                                                @zila.RangeName
                                            </a>
                                        </td>
                                        <td>@zila.Division</td>
                                        <td>@(zila.DistrictOfficerName ?? "Not Assigned")</td>
                                        <td>
                                            <span class="badge badge-info">@zila.UpazilaCount</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-warning">@zila.StoreCount</span>
                                        </td>
                                        <td>
                                            @if (zila.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@zila.Id" class="btn btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@zila.Id" class="btn btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger delete-btn"
                                                        data-id="@zila.Id" data-name="@zila.Name" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Initialize DataTable
            var table = $('#zilaTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [[1, "asc"]],
                "buttons": [
                    {
                        extend: 'copy',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'excel',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    {
                        extend: 'print',
                        exportOptions: {
                            columns: ':not(.no-export):not(:last-child)'
                        }
                    },
                    'colvis'
                ],
                "pageLength": 25
            });

            table.buttons().container().appendTo('#zilaTable_wrapper .col-md-6:eq(0)');

            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4'
            });

            // Filter functionality
            $('#divisionFilter, #rangeFilter, #statusFilter').change(function() {
                table.draw();
            });

            // Custom filtering
            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                var divisionFilter = $('#divisionFilter').val();
                var statusFilter = $('#statusFilter').val();

                var division = data[4];
                var status = $(table.row(dataIndex).node()).find('td:eq(8) .badge').hasClass('badge-success');

                if ((divisionFilter === '' || division === divisionFilter) &&
                    (statusFilter === '' || (statusFilter === 'true' && status) || (statusFilter === 'false' && !status))) {
                    return true;
                }
                return false;
            });

            // Delete confirmation (using event delegation for DataTable dynamic rows)
            $(document).on('click', '.delete-btn', function () {
                var id = $(this).data('id');
                var name = $(this).data('name');
                $('#deleteName').text(name);
                $('#deleteForm').attr('action', '@Url.Action("Delete")/' + id);
                $('#deleteModal').modal('show');
            });

            // Export handlers
            $('#exportCsvBtn').on('click', function(e) {
                e.preventDefault();
                window.location.href = '@Url.Action("ExportToCsv", "Zila")';
            });

            $('#exportPdfBtn').on('click', function(e) {
                e.preventDefault();
                window.location.href = '@Url.Action("ExportToPdf", "Zila")';
            });
        });
    </script>
}